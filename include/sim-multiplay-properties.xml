<?xml version="1.0" encoding="utf-8"?>
<!--
################################################################################
#
#                              PROPERTY TREE INIT
#
################################################################################

PROPERTY-PATH : /sim/multiplay/
-->

<PropertyList>

  <!-- http://wiki.flightgear.org/Multiplayer_protocol#Multiplay_debug-level -->
  <!--debug-level>1</debug-level-->

  <visibility-range-nm type="int">160</visibility-range-nm>

  <generic>

    <int                  n="0" />
    <int                  n="1" />
    <int                  n="2" />
    <int                  n="14" type="int">12500</int> <!-- loyal wingman : alt -->
    <int                  n="15" type="int">220</int> <!-- loyal wingman : speed -->

    <float                n="0"  alias="/sim/model/canopy-pos-norm" />
    <float                n="2"  alias="/controls/lighting/formation-lights" />
    <float                n="4"  alias="/gear/gear[0]/rollspeed-ms" />
    <float                n="5"  alias="/gear/gear[1]/rollspeed-ms" />
    <float                n="6"  alias="/gear/gear[2]/rollspeed-ms" />
    <float                n="7"  alias="/gear/gear[0]/steering-norm" />
    <float                n="8"  alias="/engines/engine[0]/reheat" />
    <float                n="9"  alias="/engines/engine[1]/reheat" />
    <float                n="10" alias="/gear/gear[0]/wow" />
    <float                n="11" alias="/gear/gear[1]/wow" />
    <float                n="12" alias="/gear/gear[2]/wow" />
    <float                n="13" alias="/sim/model/store-refuel-pos-norm" />
    <float                n="14" type="float">48</float> <!-- loyal wingman : lat -->
    <float                n="15" type="float">-1</float> <!-- loyal wingman : lng -->

    <string               n="0"  alias="/sim/model/smoking-color" />
    <string               n="1"  type="string"></string> <!-- loyal wingman : callsign to follow -->
    <string               n="2"  type="string"></string> <!-- loyal wingman : fix -->

  </generic>

</PropertyList>


