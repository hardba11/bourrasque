PROPERTY-PATH : /sim/view[0]/
-->

<PropertyList>

  <name type="string">Pilot View</name>
  <internal type="bool" archive="y">true</internal>
  <config>
    <!-- 
    x,y,z used for hud target position, 
    @see models/cockpit/cockpit-model.xml
    @see functions.nas
    -->
    <x-offset-m archive="y" type="double">.0</x-offset-m>
    <y-offset-m archive="y" type="double">1.15</y-offset-m>
    <z-offset-m archive="y" type="double">-3.32</z-offset-m>
    <pitch-offset-deg>-10</pitch-offset-deg>
    <default-field-of-view-deg type="double">109.0</default-field-of-view-deg>
    <dynamic-view type="bool">true</dynamic-view>
    <limits>
      <enabled type="bool">true</enabled>
      <left>
        <heading-max-deg type="double">160</heading-max-deg>
        <x-offset-max-m type="double">0.20</x-offset-max-m>
        <x-offset-threshold-deg type="double">65</x-offset-threshold-deg>
      </left>
      <right>
        <heading-max-deg type="double">160</heading-max-deg>
        <x-offset-max-m type="double">0.20</x-offset-max-m>
        <x-offset-threshold-deg type="double">65</x-offset-threshold-deg>
      </right>
    </limits>
  </config>

</PropertyList>


