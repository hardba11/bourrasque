<?xml version="1.0" encoding="utf-8"?>

<PropertyList>

  <path>lineupmarker.ac</path>

  <animation>
    <type>noshadow</type>
    <object-name>marker1</object-name>
  </animation>

  <animation>
    <type>alpha-test</type>
    <alpha-factor>0.01</alpha-factor>
  </animation>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>/sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>marker1</object-name>
    <object-name>marker2</object-name>
    <object-name>marker3</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>marker1</object-name>
    <emission>
      <red>1</red>
      <green-prop>/fmee-loop-timer/lineup-green1</green-prop>
      <blue>0</blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>marker2</object-name>
    <emission>
      <red>1</red>
      <green-prop>/fmee-loop-timer/lineup-green2</green-prop>
      <blue>0</blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>marker3</object-name>
    <emission>
      <red>1</red>
      <green-prop>/fmee-loop-timer/lineup-green3</green-prop>
      <blue>0</blue>
    </emission>
  </animation>

</PropertyList>
