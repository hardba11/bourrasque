<PropertyList>

  <default>
    <menu n="101">
      <label>brsq</label>

      <item n="0">
        <label>Autostart</label>
        <binding>
        <command>nasal</command>
          <script>
            <![CDATA[
core.autostart();
          ]]>
          </script>
        </binding>
      </item>

      <item n="1">
        <label>Autostop</label>
        <binding>
          <command>nasal</command>
          <script>
            <![CDATA[
core.stop();
            ]]>
          </script>
        </binding>
      </item>

      <item n="2">
        <label>Fast Start</label>
        <binding>
          <command>nasal</command>
          <script>
            <![CDATA[
core.fast_start();
            ]]>
          </script>
        </binding>
      </item>

      <item n="3">
        <label>Equipments ...</label>
        <name>equipments</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>bourrasque-equipments</dialog-name>
        </binding>
      </item>

      <item n="4">
        <label>Commands ...</label>
        <name>commands</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>bourrasque-commands</dialog-name>
        </binding>
      </item>

      <item n="5">
        <label>Select Livery ...</label>
        <binding>
          <command>nasal</command>
          <script>
            <![CDATA[
aircraft.livery.dialog.toggle();
            ]]>
          </script>
        </binding>
      </item>

      <item n="6">
        <label>Options ...</label>
        <name>options</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>bourrasque-options</dialog-name>
        </binding>
      </item>

      <item n="7">
        <label>Fuel ...</label>
        <name>fuel</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>bourrasque-fuel</dialog-name>
        </binding>
      </item>

      <item n="8">
        <label>Set views ...</label>
        <name>set-views</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>bourrasque-set-views</dialog-name>
        </binding>
      </item>

    </menu>

  </default>

</PropertyList>

