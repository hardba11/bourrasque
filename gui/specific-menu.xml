<PropertyList>

  <default>
    <menu n="101">
      <label>brsq</label>

      <item n="1">
        <label>Commands ...</label>
        <name>commands</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>bourrasque-commands</dialog-name>
        </binding>
      </item>

      <item n="2">
        <label>Fuel ...</label>
        <name>fuel</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>bourrasque-fuel</dialog-name>
        </binding>
      </item>

      <item n="3">
        <label>Options ...</label>
        <name>options</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>bourrasque-options</dialog-name>
        </binding>
      </item>

      <item n="4">
        <label>Equipments ...</label>
        <name>equipments</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>bourrasque-equipments</dialog-name>
        </binding>
      </item>

      <item n="5">
        <label>Select Livery ...</label>
        <binding>
          <command>nasal</command>
          <script>
            <![CDATA[
aircraft.livery.dialog.toggle();
            ]]>
          </script>
        </binding>
      </item>

      <item n="6">
        <label>Set views ...</label>
        <name>set-views</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>bourrasque-set-views</dialog-name>
        </binding>
      </item>

<!--
      <item n="7">
        <label>DevTools ...</label>
        <name>dev-tools</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>bourrasque-dev-tools</dialog-name>
        </binding>
      </item>
-->

    </menu>

  </default>

</PropertyList>




