<PropertyList>

  <name>bourrasque-fuel</name>
  <modal type="bool">false</modal>
  <layout>vbox</layout>
  <group>
    <layout>hbox</layout>
    <empty>
      <stretch>1</stretch>
    </empty>
    <text>
      <label>bourrasque's fuel</label>
    </text>
    <empty>
      <stretch>1</stretch>
    </empty>
    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend />
      <default>1</default>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>
  </group>

  <hrule />

  <!-- ~~~~~~~~~~~~~~~~~~ fuel freeze -->
  <group>
    <layout>table</layout>
    <halign>left</halign>
    <checkbox>
      <row>0</row>
      <col>0</col>
      <x>150</x>
      <y>200</y>
      <width>12</width>
      <height>12</height>
      <property>/sim/freeze/fuel</property>
      <binding>
        <command>property-toggle</command>
        <property>/sim/freeze/fuel</property>
      </binding>
    </checkbox>
    <text>
      <row>0</row>
      <col>1</col>
      <halign>left</halign>
      <label>Fuel freeze</label>
    </text>
  </group>

  <hrule />

  <!-- ~~~~~~~~~~~~~~~~~~ refuel -->
  <group>
    <layout>table</layout>

    <text>
      <pref-width>150</pref-width>
      <label>level-norm</label>
      <row>0</row>
      <col>0</col>
      <halign>left</halign>
      <format>fuel fraction : %0.2f / 1.00</format>
      <live>true</live>
      <property>/sim/fuel-fraction</property>
    </text>

    <slider>
      <name>fuel-fraction</name>
      <row>1</row>
      <col>0</col>
      <pref-width>150</pref-width>
      <min>0</min>
      <max>1</max>
      <step>.05</step>
      <property>/sim/fuel-fraction</property>
      <binding>
        <command>dialog-apply</command>
        <object-name>fuel-fraction</object-name>
      </binding>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
var level_norm = getprop("/sim/fuel-fraction") or 0;
setprop("/consumables/fuel/tank[0]/selected", 1);
setprop("/consumables/fuel/tank[1]/selected", 1);
setprop("/consumables/fuel/tank[2]/selected", 1);
setprop("/consumables/fuel/tank[3]/selected", 1);
setprop("/consumables/fuel/tank[4]/selected", 1);
setprop("/consumables/fuel/tank[5]/selected", 1);
setprop("/consumables/fuel/tank[6]/selected", 1);
setprop("/consumables/fuel/tank[7]/selected", 1);
setprop("/consumables/fuel/tank[0]/level-norm", level_norm);
setprop("/consumables/fuel/tank[1]/level-norm", level_norm);
setprop("/consumables/fuel/tank[2]/level-norm", level_norm);
setprop("/consumables/fuel/tank[3]/level-norm", level_norm);
setprop("/consumables/fuel/tank[4]/level-norm", level_norm);
setprop("/consumables/fuel/tank[5]/level-norm", level_norm);
setprop("/consumables/fuel/tank[6]/level-norm", level_norm);
setprop("/consumables/fuel/tank[7]/level-norm", level_norm);
          ]]>
        </script>
      </binding>
    </slider>

  </group>

  <hrule />

</PropertyList>