<?xml version="1.0"?>

<PropertyList>
  <name>bourrasque-dev-tools</name>
  <layout>vbox</layout>
  <width>450</width>

  <group>
    <layout>hbox</layout>
    <empty><stretch>1</stretch></empty>
    <text>
      <label>Adjust DEBUG values</label>
    </text>
    <empty><stretch>1</stretch></empty>
    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>

  <hrule />

  <group>
    <layout>table</layout>
    <button>
      <row>0</row>
      <col>0</col>
      <pref-width>200</pref-width>
      <pref-height>50</pref-height>
      <legend>reinit A/P</legend>
      <binding>
        <command>reinit</command>
        <subsystem>xml-autopilot</subsystem>
      </binding>
    </button>
  </group>

  <hrule />

  <group>
    <layout>table</layout>

    <!-- ROW 1 -->

    <text>
      <row>0</row>
      <col>0</col>
      <label>Kp</label>
    </text>

    <button>
      <row>0</row>
      <col>1</col>
      <pref-width>50</pref-width>
      <pref-height>25</pref-height>
      <legend>-.1</legend>
      <binding>
        <command>property-adjust</command>
        <property>/_debug/Kp</property>
        <step>-.1</step>
      </binding>
      <binding>
        <command>reinit</command>
        <subsystem>xml-autopilot</subsystem>
      </binding>
    </button>

    <button>
      <row>0</row>
      <col>2</col>
      <pref-width>50</pref-width>
      <pref-height>25</pref-height>
      <legend>-.01</legend>
      <binding>
        <command>property-adjust</command>
        <property>/_debug/Kp</property>
        <step>-.01</step>
      </binding>
      <binding>
        <command>reinit</command>
        <subsystem>xml-autopilot</subsystem>
      </binding>
    </button>

    <button>
      <row>0</row>
      <col>3</col>
      <pref-width>50</pref-width>
      <pref-height>25</pref-height>
      <legend>+.01</legend>
      <binding>
        <command>property-adjust</command>
        <property>/_debug/Kp</property>
        <step>.01</step>
      </binding>
      <binding>
        <command>reinit</command>
        <subsystem>xml-autopilot</subsystem>
      </binding>
    </button>

    <button>
      <row>0</row>
      <col>4</col>
      <pref-width>50</pref-width>
      <pref-height>25</pref-height>
      <legend>+.1</legend>
      <binding>
        <command>property-adjust</command>
        <property>/_debug/Kp</property>
        <step>.1</step>
      </binding>
      <binding>
        <command>reinit</command>
        <subsystem>xml-autopilot</subsystem>
      </binding>
    </button>

    <!-- ROW 2 -->

    <text>
      <row>1</row>
      <col>0</col>
      <label>Ti</label>
    </text>

    <button>
      <row>1</row>
      <col>1</col>
      <pref-width>50</pref-width>
      <pref-height>25</pref-height>
      <legend>/2</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
var Ti = getprop("/_debug/Ti") or 0;
setprop("/_debug/Ti", (Ti / 2));
          ]]>
        </script>
      </binding>
      <binding>
        <command>reinit</command>
        <subsystem>xml-autopilot</subsystem>
      </binding>
    </button>

    <button>
      <row>1</row>
      <col>2</col>
      <pref-width>50</pref-width>
      <pref-height>25</pref-height>
      <legend>*2</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
var Ti = getprop("/_debug/Ti") or 0;
setprop("/_debug/Ti", (Ti * 2));
          ]]>
        </script>
      </binding>
      <binding>
        <command>reinit</command>
        <subsystem>xml-autopilot</subsystem>
      </binding>
    </button>

    <!-- ROW 3 -->

    <text>
      <row>2</row>
      <col>0</col>
      <label>Td</label>
    </text>

    <button>
      <row>2</row>
      <col>1</col>
      <pref-width>50</pref-width>
      <pref-height>25</pref-height>
      <legend>-</legend>
      <binding>
        <command>property-adjust</command>
        <property>/_debug/Td</property>
        <step>-0.00001</step>
      </binding>
      <binding>
        <command>reinit</command>
        <subsystem>xml-autopilot</subsystem>
      </binding>
    </button>

    <button>
      <row>2</row>
      <col>2</col>
      <pref-width>50</pref-width>
      <pref-height>25</pref-height>
      <legend>+</legend>
      <binding>
        <command>property-adjust</command>
        <property>/_debug/Td</property>
        <step>0.00001</step>
      </binding>
      <binding>
        <command>reinit</command>
        <subsystem>xml-autopilot</subsystem>
      </binding>
    </button>

    <button>
      <row>2</row>
      <col>3</col>
      <pref-width>50</pref-width>
      <pref-height>25</pref-height>
      <legend>/2</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
var Td = getprop("/_debug/Td") or 0;
setprop("/_debug/Td", (Td / 2));
          ]]>
        </script>
      </binding>
      <binding>
        <command>reinit</command>
        <subsystem>xml-autopilot</subsystem>
      </binding>
    </button>

    <button>
      <row>2</row>
      <col>4</col>
      <pref-width>50</pref-width>
      <pref-height>25</pref-height>
      <legend>*2</legend>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
var Td = getprop("/_debug/Td") or 0;
setprop("/_debug/Td", (Td * 2));
          ]]>
        </script>
      </binding>
      <binding>
        <command>reinit</command>
        <subsystem>xml-autopilot</subsystem>
      </binding>
    </button>

  </group>


</PropertyList>






