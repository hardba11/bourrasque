<!--
################################################################################
#
#                      bourrasque options dialogbox
#
################################################################################

the dialogbox is autoloaded if in gui/dialog

https://sourceforge.net/p/flightgear/fgdata/ci/next/tree/Docs/README.gui

changelog
- 2016-10-22 : create

-->

<PropertyList>

  <name>bourrasque-options</name>
  <modal type="bool">false</modal>
  <layout>vbox</layout>
  <group>
    <layout>hbox</layout><empty><stretch>1</stretch></empty>
    <text><label>bourrasque's options</label></text>
    <empty><stretch>1</stretch></empty>
    <button><pref-width>16</pref-width><pref-height>16</pref-height><legend />
      <default>1</default><keynum>27</keynum><border>2</border>
      <binding><command>dialog-close</command></binding>
      <binding><command>dialog-apply</command></binding>
    </button>
  </group>

  <hrule />

  <!-- ~~~~~~~~~~~~~~~~~~ shake effect -->
  <group>
    <layout>table</layout>
    <halign>left</halign>
    <checkbox>
      <row>0</row><col>0</col>
      <x>50</x>
      <y>200</y>
      <width>12</width>
      <height>12</height>
      <property>/controls/cockpit/shake-effect</property>
      <binding>
        <command>property-toggle</command>
        <property>/controls/cockpit/shake-effect</property>
      </binding>
    </checkbox>
    <text>
      <row>0</row><col>1</col>
      <halign>left</halign>
      <label>Cockpit shake effect</label>
    </text>
  </group>
  <hrule />

  <!-- ~~~~~~~~~~~~~~~~~~ canvas hud helper -->
  <group>
    <layout>table</layout>
    <halign>left</halign>
    <text>
      <row>0</row><col>0</col>
      <label>HUD helper</label>
    </text>
    <checkbox>
      <row>1</row><col>0</col>
      <x>150</x>
      <y>200</y>
      <width>12</width>
      <height>12</height>
      <property>/instrumentation/my_aircraft/hud_target_positions/controls/enabled</property>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/my_aircraft/hud_target_positions/controls/enabled</property>
      </binding>
    </checkbox>
    <text>
      <row>1</row><col>1</col>
      <halign>left</halign>
      <label>Show targets' positions</label>
    </text>
    <checkbox>
      <row>2</row><col>0</col>
      <x>150</x>
      <y>200</y>
      <width>12</width>
      <height>12</height>
      <property>/instrumentation/my_aircraft/hud_target_positions/controls/targets_are_mp</property>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/my_aircraft/hud_target_positions/controls/targets_are_mp</property>
      </binding>
    </checkbox>
    <text>
      <row>2</row><col>1</col>
      <halign>left</halign>
      <label>Show multiplayers targets (AI if unchecked)</label>
    </text>
  </group>

  <hrule />

  <!-- ~~~~~~~~~~~~~~~~~~ pax -->
  <group>
    <layout>table</layout>
    <halign>left</halign>
    <text>
      <row>0</row><col>0</col>
      <label>Pilot</label>
    </text>
    <button>
      <row>0</row><col>1</col>
      <pref-width>70</pref-width><pref-height>20</pref-height>
      <legend>Away</legend>
      <binding>
        <command>property-assign</command>
        <property>controls/pax/pilot</property>
        <value type="bool">0</value>
      </binding>
    </button>
    <button>
      <row>0</row><col>2</col>
      <pref-width>70</pref-width><pref-height>20</pref-height>
      <legend>Seated</legend>
      <binding>
        <command>property-assign</command>
        <property>controls/pax/pilot</property>
        <value type="bool">1</value>
      </binding>
    </button>
    <text>
      <row>1</row><col>0</col>
      <label>Copilot</label>
    </text>
    <button>
      <row>1</row><col>1</col>
      <pref-width>70</pref-width><pref-height>20</pref-height>
      <legend>Away</legend>
      <binding>
        <command>property-assign</command>
        <property>controls/pax/copilot</property>
        <value type="bool">0</value>
      </binding>
    </button>
    <button>
      <row>1</row><col>2</col>
      <pref-width>70</pref-width><pref-height>20</pref-height>
      <legend>Seated</legend>
      <binding>
        <command>property-assign</command>
        <property>controls/pax/copilot</property>
        <value type="bool">1</value>
      </binding>
    </button>
  </group>

  <hrule />

  <!-- ~~~~~~~~~~~~~~~~~~ hippodrome leg duration -->
  <group>
    <layout>table</layout>
    <halign>left</halign>
    <text>
      <row>0</row><col>0</col>
      <label>Hippodrome leg</label>
    </text>
    <button>
      <row>0</row><col>1</col>
      <legend>2 min</legend>
      <binding>
        <command>property-assign</command>
        <property>/instrumentation/my_aircraft/pfd/controls/hippodrome-leg-duration</property>
        <value type="int">120</value>
      </binding>
    </button>
    <button>
      <row>0</row><col>2</col>
      <legend>5 min</legend>
      <binding>
        <command>property-assign</command>
        <property>/instrumentation/my_aircraft/pfd/controls/hippodrome-leg-duration</property>
        <value type="int">300</value>
      </binding>
    </button>
    <button>
      <row>0</row><col>3</col>
      <legend>10 min</legend>
      <binding>
        <command>property-assign</command>
        <property>/instrumentation/my_aircraft/pfd/controls/hippodrome-leg-duration</property>
        <value type="int">600</value>
      </binding>
    </button>
  </group>

  <hrule />

</PropertyList>




