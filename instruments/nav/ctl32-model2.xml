================================================================================
                                                         CONTROLS AND ANIMATIONS
================================================================================
  -->

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control power -->
  <animation>
    <type>pick</type>
    <object-name>CTL-32.pwr</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>instrumentation/nav[1]/serviceable</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>nav1-power</tooltip-id>
        <label>nav1 power: %s</label>
        <property>instrumentation/nav[1]/serviceable</property>
        <mapping>on-off</mapping>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ animation power -->
  <animation>
    <type>rotate</type>
    <object-name>CTL-32.pwr</object-name>
    <property>instrumentation/nav[1]/serviceable</property>
    <interpolation>
      <entry>
        <ind>0</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>1.0</ind>
        <dep>30</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>0.0</x-m>
      <y-m>-0.0138</y-m>
      <z-m>-0.0183</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control volume -->
  <animation>
    <type>pick</type>
    <object-name>CTL-32.vol</object-name>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <interval-sec>0.1</interval-sec>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/nav[1]/volume</property>
        <step>0.050</step>
        <min>0</min>
        <max>1.0</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>nav1-vol</tooltip-id>
        <label>nav1 volume: %d%%</label>
        <property>instrumentation/nav[1]/volume</property>
        <mapping>percent</mapping>
      </binding>
    </hovered>
  </animation>

