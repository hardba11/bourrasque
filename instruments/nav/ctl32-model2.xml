<?xml version="1.0" encoding="utf-8"?>
<!--
description :
    this file uses the 3d model ans defines animations of the model and objects
    (mouvements, lightings)
    it loads if necessary the submodels files


CTL 32 Nav2 Control for VIR-32 receiver
Active and preset displayed + 6 frequency memory storage
2.375"W x 2.625"H
Freq. range 108.000 - 117.975 (normal)
Strap option 133.00 - 135.95
05 khz spacing
Syd Adams

-->
<PropertyList>
  <path>ctl32.ac</path>
  <!--
================================================================================
                                                             OBJECTS DECLARATION
================================================================================
  -->
  <!-- ~~~~~~~~~~~~~~~~~~ opaque + transparent -->
  <animation>
    <object-name>CTL-32</object-name>
    <object-name>CTL-32.pwr</object-name>
    <object-name>CTL-32.toggle</object-name>
    <object-name>CTL-32.vol</object-name>
    <object-name>act.btn</object-name>
    <object-name>freq.001</object-name>
    <object-name>freq.002</object-name>
    <object-name>freq.003</object-name>
    <object-name>freq.004</object-name>
    <object-name>freq.005</object-name>
    <object-name>freq.dec</object-name>
    <object-name>freq.dwn</object-name>
    <object-name>freq.knob</object-name>
    <object-name>freq.up</object-name>
    <object-name>freq1.knob</object-name>
    <object-name>mem.annun</object-name>
    <object-name>stby.001</object-name>
    <object-name>stby.002</object-name>
    <object-name>stby.003</object-name>
    <object-name>stby.004</object-name>
    <object-name>stby.005</object-name>
    <object-name>stby.dec</object-name>
    <object-name>sto.btn</object-name>
    <object-name>test.btn</object-name>
    <object-name>xmt.annun</object-name>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ hidden -->
  <animation>
    <type>select</type>
    <object-name>freq.001</object-name>
    <object-name>freq.002</object-name>
    <object-name>freq.003</object-name>
    <object-name>freq.004</object-name>
    <object-name>freq.005</object-name>
    <object-name>freq.dec</object-name>
    <object-name>mem.annun</object-name>
    <object-name>stby.001</object-name>
    <object-name>stby.002</object-name>
    <object-name>stby.003</object-name>
    <object-name>stby.004</object-name>
    <object-name>stby.005</object-name>
    <object-name>stby.dec</object-name>
    <condition>
      <property>systems/electrical/bus/avionics</property>
      <property>instrumentation/nav[1]/serviceable</property>
    </condition>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ effects -->
  <effect>
    <inherits-from>Aircraft/bourrasque/models/effects/interior/interior-flashlight</inherits-from>
    <object-name>CTL-32</object-name>
    <object-name>CTL-32.pwr</object-name>
    <object-name>CTL-32.toggle</object-name>
    <object-name>CTL-32.vol</object-name>
    <object-name>act.btn</object-name>
    <object-name>freq.dec</object-name>
    <object-name>freq.dwn</object-name>
    <object-name>freq.knob</object-name>
    <object-name>freq.up</object-name>
    <object-name>freq1.knob</object-name>
    <object-name>mem.annun</object-name>
    <object-name>stby.dec</object-name>
    <object-name>sto.btn</object-name>
    <object-name>test.btn</object-name>
    <object-name>xmt.annun</object-name>
  </effect>

  <!-- ~~~~~~~~~~~~~~~~~~ emitting (light) -->
  <animation>
    <type>material</type>
    <object-name>freq.001</object-name>
    <object-name>freq.002</object-name>
    <object-name>freq.003</object-name>
    <object-name>freq.004</object-name>
    <object-name>freq.005</object-name>
    <object-name>stby.001</object-name>
    <object-name>stby.002</object-name>
    <object-name>stby.003</object-name>
    <object-name>stby.dec</object-name>
    <object-name>stby.004</object-name>
    <object-name>stby.005</object-name>
    <condition>
      <greater-than>
        <property>/controls/lighting/instruments-norm</property>
        <value>0.1</value>
      </greater-than>
    </condition>
    <emission>
      <factor-prop>/controls/lighting/instruments-norm</factor-prop>
      <red>0.8</red>
      <green>0.2</green>
      <blue>0.2</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>freq.001</object-name>
    <object-name>freq.002</object-name>
    <object-name>freq.003</object-name>
    <object-name>freq.004</object-name>
    <object-name>freq.005</object-name>
    <object-name>stby.001</object-name>
    <object-name>stby.002</object-name>
    <object-name>stby.003</object-name>
    <object-name>stby.dec</object-name>
    <object-name>stby.004</object-name>
    <object-name>stby.005</object-name>
    <condition>
      <equals>
        <property>/controls/lighting/instruments-norm</property>
        <value>0</value>
      </equals>
    </condition>
    <emission>
      <factor>1</factor>
      <red>0.8</red>
      <green>0.2</green>
      <blue>0.2</blue>
    </emission>
  </animation>

  <!--
================================================================================
                                                         CONTROLS AND ANIMATIONS
================================================================================
  -->

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control power -->
  <animation>
    <type>pick</type>
    <object-name>CTL-32.pwr</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>instrumentation/nav[1]/serviceable</property>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>nav2-power</tooltip-id>
        <label>nav2 power: %s</label>
        <property>instrumentation/nav[1]/serviceable</property>
        <mapping>on-off</mapping>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ animation power -->
  <animation>
    <type>rotate</type>
    <object-name>CTL-32.pwr</object-name>
    <property>instrumentation/nav[1]/serviceable</property>
    <interpolation>
      <entry>
        <ind>0</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>1.0</ind>
        <dep>30</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>0.0</x-m>
      <y-m>-0.0138</y-m>
      <z-m>-0.0183</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control volume -->
  <animation>
    <type>knob</type>
    <object-name>CTL-32.vol</object-name>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/nav[1]/volume</property>
        <factor>-.05</factor>
        <min>0</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>nav2-vol</tooltip-id>
        <label>nav2 volume: %d%%</label>
        <mapping>percent</mapping>
        <property>instrumentation/nav[1]/volume</property>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ animation volume -->
  <animation>
    <type>rotate</type>
    <object-name>CTL-32.vol</object-name>
    <property>instrumentation/nav[1]/volume</property>
    <factor>300</factor>
    <center>
      <x-m>0.0</x-m>
      <y-m>-0.0138</y-m>
      <z-m>-0.0183</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control digits frequency -->


  <!-- left/middle click = +-0.1 // wheel = +-0.05 -->
  <animation>
    <type>pick</type>
    <object-name>freq1.knob</object-name>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/nav[1]/frequencies/standby-mhz</property>
        <step>0.1</step>
        <min>108.00</min>
        <max>118.000</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>1</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/nav[1]/frequencies/standby-mhz</property>
        <step>-0.1</step>
        <min>108.00</min>
        <max>118.000</max>
        <wrap>1</wrap>
      </binding>
      <binding>
