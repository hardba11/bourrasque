          </equals>
        </condition>
        <command>property-assign</command>
        <property>instrumentation/adf[0]/mode</property>
        <value>adf</value>
      </binding>
      <binding>
        <condition>
          <equals>
            <property>instrumentation/adf[0]/func-knob</property>
            <value>3</value>
          </equals>
        </condition>
        <command>property-assign</command>
        <property>instrumentation/adf[0]/mode</property>
        <value>tone</value>
      </binding>
    </action>



    <!-- scroll up : increase -->
    <action>
      <button>3</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/adf[0]/func-knob</property>
        <step>1</step>
        <min>0</min>
        <max>3</max>
        <wrap>0</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
