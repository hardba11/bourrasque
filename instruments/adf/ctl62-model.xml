        </condition>
        <command>property-assign</command>
        <property>instrumentation/adf[0]/ident-audible</property>
        <value>1</value>
      </binding>

      <!-- setting mode value from func-knob value
          0: off
          1: ant
          2: adf
          3: tone
      -->
      <binding>
        <condition>
          <equals>
            <property>instrumentation/adf[0]/func-knob</property>
            <value>0</value>
          </equals>
        </condition>
        <command>property-assign</command>
