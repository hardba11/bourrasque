  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control power -->
  <animation>
    <type>pick</type>
    <object-name>CTL-62.pwr</object-name>

    <!-- LMB : increase -->
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/adf[0]/func-knob</property>
        <step>1</step>
        <min>0</min>
        <max>3</max>
        <wrap>0</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>

      <!-- audible if not off -->
      <binding>
        <condition>
          <greater-than>
            <property>instrumentation/adf[0]/func-knob</property>
            <value>0</value>
          </greater-than>
        </condition>
        <command>property-assign</command>
        <property>instrumentation/adf[0]/ident-audible</property>
        <value>1</value>
      </binding>

      <!-- setting mode value from func-knob value
          0: off
          1: ant
          2: adf
          3: tone
      -->
      <binding>
        <condition>
          <equals>
            <property>instrumentation/adf[0]/func-knob</property>
            <value>0</value>
          </equals>
        </condition>
        <command>property-assign</command>
        <property>instrumentation/adf[0]/mode</property>
        <value>off</value>
      </binding>
      <binding>
        <condition>
          <equals>
            <property>instrumentation/adf[0]/func-knob</property>
            <value>1</value>
          </equals>
        </condition>
        <command>property-assign</command>
        <property>instrumentation/adf[0]/mode</property>
        <value>ant</value>
      </binding>
      <binding>
        <condition>
          <equals>
            <property>instrumentation/adf[0]/func-knob</property>
            <value>2</value>
          </equals>
        </condition>
        <command>property-assign</command>
        <property>instrumentation/adf[0]/mode</property>
        <value>adf</value>
      </binding>
      <binding>
        <condition>
          <equals>
            <property>instrumentation/adf[0]/func-knob</property>
            <value>3</value>
          </equals>
        </condition>
        <command>property-assign</command>
        <property>instrumentation/adf[0]/mode</property>
        <value>tone</value>
      </binding>
    </action>

    <!-- MMB : decrease -->
