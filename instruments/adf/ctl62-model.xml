        <value>ant</value>
      </binding>
      <binding>
        <condition>
          <equals>
            <property>instrumentation/adf[0]/func-knob</property>
            <value>2</value>
          </equals>
        </condition>
        <command>property-assign</command>
        <property>instrumentation/adf[0]/mode</property>
        <value>adf</value>
      </binding>
      <binding>
        <condition>
          <equals>
            <property>instrumentation/adf[0]/func-knob</property>
            <value>3</value>
          </equals>
        </condition>
        <command>property-assign</command>
        <property>instrumentation/adf[0]/mode</property>
        <value>tone</value>
      </binding>
    </action>

    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>adf-swap-freq</tooltip-id>
        <label>ADF mode</label>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ animation power -->
  <animation>
    <type>rotate</type>
    <object-name>CTL-62.pwr</object-name>
    <property>instrumentation/adf[0]/func-knob</property>
    <factor>30</factor>
    <center>
      <x-m>0.0</x-m>
      <y-m>-0.014</y-m>
      <z-m>-0.018</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control volume -->
  <animation>
    <type>knob</type>
    <object-name>CTL-62.vol</object-name>
    <object-name>CTL-62.vol-emit</object-name>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/adf[0]/volume-norm</property>
        <factor>-.05</factor>
        <min>0</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>adf-volume</tooltip-id>
        <label>ADF volume: %0.2f%%</label>
        <property>instrumentation/adf[0]/volume-norm</property>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ animation volume -->
  <animation>
    <type>rotate</type>
    <object-name>CTL-62.vol-emit</object-name>
    <property>instrumentation/adf[0]/volume-norm</property>
    <factor>360</factor>
    <center>
      <x-m>0.0</x-m>
      <y-m>-0.014</y-m>
      <z-m>-0.018</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control digits frequency -->

  <!-- left/middle click = +-10 // wheel = +-1 -->
  <animation>
    <type>pick</type>
    <object-name>CTL-62.freq1</object-name>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/adf[0]/frequencies/standby-khz</property>
        <step>10</step>
        <min>190</min>
        <max>1800</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>1</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/adf[0]/frequencies/standby-khz</property>
        <step>-10</step>
        <min>190</min>
        <max>1800</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>3</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/adf[0]/frequencies/standby-khz</property>
        <step>1</step>
        <min>190</min>
        <max>1800</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/adf[0]/frequencies/standby-khz</property>
        <step>-1</step>
        <min>190</min>
        <max>1800</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>adf-freq1</tooltip-id>
        <label>ADF frequency: %d kHz</label>
        <property>instrumentation/adf[0]/frequencies/standby-khz</property>
