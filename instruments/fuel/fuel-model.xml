<!-- Syd Adams -->
<!--
description :
    this file uses the 3d model ans defines animations of the model and objects
    (mouvements, lightings)
    it loads if necessary the submodels files

changelog
- 2016-10-22 : create

-->

<PropertyList>

  <name>fuel</name>
  <path>instrument_fuel.ac</path>

  <!--
================================================================================
                                                             OBJECTS DECLARATION
================================================================================
  -->
  <!-- ~~~~~~~~~~~~~~~~~~ opaque + transparent -->
  <animation>
    <object-name>fuel.box</object-name>
    <object-name>fuel.screen.off</object-name>
    <object-name>fuel_canvas_screen</object-name>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ hidden -->
  <animation>
    <type>select</type>
    <object-name>fuel.screen.off</object-name>
    <condition>
      <or>
        <not><property>systems/electrical/bus/avionics</property></not>
        <equals><property>/sim/aircraft</property><value>bourrasque-backseat</value></equals>
      </or>
    </condition>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ effects -->
  <effect>
    <inherits-from>Aircraft/bourrasque/models/effects/interior/interior-flashlight</inherits-from>
    <object-name>fuel.box</object-name>
    <object-name>fuel.screen.off</object-name>
    <object-name>fuel_canvas_screen</object-name>
  </effect>

  <!-- ~~~~~~~~~~~~~~~~~~ emitting (flood) -->
  <animation>
    <type>material</type>
    <object-name>fuel.box</object-name>
    <object-name>fuel.screen.off</object-name>
    <emission>
      <factor-prop>/controls/lighting/panel-norm</factor-prop>
      <red>.5</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
    <condition>
      <property>systems/electrical/bus/avionics</property>
    </condition>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ emitting (light) -->
  <animation>
    <type>material</type>
    <object-name>fuel_canvas_screen</object-name>
    <condition>
      <greater-than>
        <property>/controls/lighting/instruments-norm</property>
        <value>0.1</value>
      </greater-than>
    </condition>
    <emission>
      <factor-prop>/controls/lighting/instruments-norm</factor-prop>
      <red>1</red>
      <green>1</green>
      <blue>1</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>fuel_canvas_screen</object-name>
    <condition>
      <equals>
        <property>/controls/lighting/instruments-norm</property>
        <value>0</value>
      </equals>
    </condition>
    <emission>
      <factor>1</factor>
      <red>1</red>
      <green>1</green>
      <blue>1</blue>
    </emission>
  </animation>

  <!--
================================================================================
                                                                        TEXT OSG
================================================================================
  -->
  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">Fuel Display</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.016</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.08</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>.02</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>0.2</red>
      <green>1</green>
      <blue>0.2</blue>
    </emission>
  </animation>
  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

</PropertyList>
