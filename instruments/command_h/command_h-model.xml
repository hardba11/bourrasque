<?xml version="1.0" encoding="utf-8"?>
<!--
description :
    this file uses the 3d model and defines animations of the model and objects
    (mouvements, lightings)
    it loads if necessary the submodels files

changelog
- 2016-10-22 : create

-->

<PropertyList>

  <name>command_h</name>
  <path>instrument_command_h.ac</path>

  <!--
================================================================================
                                                             OBJECTS DECLARATION
================================================================================
  -->
  <!-- ~~~~~~~~~~~~~~~~~~ opaque + transparent -->
  <animation>
    <object-name>command_h.box</object-name>
    <object-name>command_h.knob_hud</object-name>
    <object-name>command_h.red</object-name>
    <object-name>command_h.box-emit</object-name>
    <object-name>command_h.red-emit</object-name>
    <object-name>alert_panel_canvas_screen</object-name>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ hidden -->
  <animation>
    <type>select</type>
    <object-name>command_h.screen.off</object-name>
    <condition>
      <not>
        <or>
          <property>systems/electrical/bus/avionics</property>
          <not-equals>
            <property>/instrumentation/my_aircraft/electricals/controls/master-switch</property>
            <value>0</value>
          </not-equals>
        </or>
      </not>
    </condition>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ effects -->
  <effect>
    <inherits-from>Aircraft/bourrasque/models/effects/interior/interior-flashlight</inherits-from>
    <object-name>command_h.box</object-name>
    <object-name>command_h.knob_hud</object-name>
    <object-name>command_h.red</object-name>
    <object-name>command_h.box-emit</object-name>
    <object-name>command_h.red-emit</object-name>
    <object-name>alert_panel_canvas_screen</object-name>
  </effect>

  <!-- ~~~~~~~~~~~~~~~~~~ emitting (light) -->
  <animation>
    <type>material</type>
    <object-name>command_h.box-emit</object-name>
    <emission>
      <factor-prop>/controls/lighting/instruments-norm</factor-prop>
      <red>0.8</red>
      <green>0.2</green>
      <blue>0.2</blue>
    </emission>
    <condition>
      <property>systems/electrical/bus/avionics</property>
    </condition>
  </animation>
  <animation>
    <type>material</type>
    <object-name>alert_panel_canvas_screen</object-name>
    <emission>
      <factor>1</factor>
      <red>1</red>
      <green>1</green>
      <blue>1</blue>
    </emission>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ emitting (enabled) -->
  <animation>
    <type>material</type>
    <object-name>command_h.red-emit</object-name>
    <emission>
      <factor>2</factor>
      <red>1</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
    <condition>
      <property>systems/electrical/bus/avionics</property>
    </condition>
  </animation>

  <!--
================================================================================
                                                         CONTROLS AND ANIMATIONS
================================================================================
  -->

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control hud brightness -->
  <animation>
    <type>knob</type>
    <object-name>command_h.knob_hud</object-name>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>/sim/hud/color/brightness</property>
        <factor>-.1</factor>
        <min>0</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-command-h-hud-brightness</tooltip-id>
        <label>Hud brighness %s%%</label>
        <mapping>percent</mapping>
        <property>/sim/hud/color/brightness</property>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control hud red -->
  <animation>
    <type>pick</type>
    <object-name>command_h.red</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-cycle</command>
        <property>/sim/hud/current-color</property>
        <value>1</value>
        <value>0</value>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-command-h-hud-red</tooltip-id>
        <label>Toggle hud color (h)</label>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ animation hud red -->
  <animation>
    <type>select</type>
    <object-name>command_h.red-emit</object-name>
    <condition>
      <and>
        <property>systems/electrical/bus/avionics</property>
        <equals>
          <property>/sim/hud/current-color</property>
          <value>1</value>
        </equals>
      </and>
    </condition>
  </animation>

  <!--
================================================================================
                                                                        TEXT OSG
================================================================================
  -->
  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">Hud panel</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.016</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.08</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>.02</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>0.2</red>
      <green>1</green>
      <blue>0.2</blue>
    </emission>
  </animation>
  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

</PropertyList>

