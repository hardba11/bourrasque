<?xml version="1.0" encoding="utf-8"?>
<!-- Syd Adams -->
<!--
description :
    this file uses the 3d model ans defines animations of the model and objects
    (mouvements, lightings)
    it loads if necessary the submodels files

changelog
- 2016-10-22 : create

-->

<PropertyList>

  <name>sfd</name>
  <path>instrument_sfd.ac</path>

  <!--
================================================================================
                                                             OBJECTS DECLARATION
================================================================================
  -->
  <!-- ~~~~~~~~~~~~~~~~~~ opaque + transparent -->
  <animation>
    <object-name>sfd.cadre</object-name>
    <object-name>sfd.screen.off</object-name>
    <object-name>sfd.buttons</object-name>
    <object-name>sfd.ack</object-name>
    <object-name>sfd.swap-screen</object-name>
    <object-name>sfd.radar-range</object-name>
    <object-name>sfd.cadre-emit</object-name>
    <object-name>sfd_canvas_screen_radar</object-name>
    <object-name>sfd_canvas_screen_eicas</object-name>
    <object-name>sfd.set_bingo</object-name>
    <object-name>sfd.swap_bingo</object-name>
    <object-name>sfd.bingo_on-emit</object-name>
    <object-name>sfd.aar</object-name>
    <object-name>sfd.aar-emit</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>sfd.screen.off</object-name>
    <condition>
      <or>
        <not><property>systems/electrical/bus/avionics</property></not>
        <equals><property>/sim/aircraft</property><value>bourrasque-backseat</value></equals>
      </or>
    </condition>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ effects -->
  <effect>
    <inherits-from>Aircraft/bourrasque/models/effects/interior/interior-flashlight</inherits-from>
    <object-name>sfd.cadre</object-name>
    <object-name>sfd.screen.off</object-name>
    <object-name>sfd_canvas_screen_radar</object-name>
    <object-name>sfd_canvas_screen_eicas</object-name>
    <object-name>sfd.buttons</object-name>
    <object-name>sfd.ack</object-name>
    <object-name>sfd.swap-screen</object-name>
    <object-name>sfd.radar-range</object-name>
    <object-name>sfd.cadre-emit</object-name>
    <object-name>sfd.set_bingo</object-name>
    <object-name>sfd.swap_bingo</object-name>
    <object-name>sfd.bingo_on-emit</object-name>
    <object-name>sfd.aar</object-name>
    <object-name>sfd.aar-emit</object-name>
  </effect>

  <!-- ~~~~~~~~~~~~~~~~~~ emitting (flood) -->
  <animation>
    <type>material</type>
    <object-name>sfd.cadre</object-name>
    <object-name>sfd.screen.off</object-name>
    <object-name>sfd.buttons</object-name>
    <object-name>sfd.ack</object-name>
    <object-name>sfd.swap-screen</object-name>
    <object-name>sfd.radar-range</object-name>
    <object-name>sfd.set_bingo</object-name>
    <object-name>sfd.swap_bingo</object-name>
    <object-name>sfd.aar</object-name>
    <emission>
      <factor-prop>/controls/lighting/panel-norm</factor-prop>
      <red>.7</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
    <condition>
      <property>systems/electrical/bus/avionics</property>
    </condition>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ emitting (light) -->
  <animation>
    <type>material</type>
    <object-name>sfd.cadre-emit</object-name>
    <emission>
      <factor-prop>/controls/lighting/instruments-norm</factor-prop>
      <red>0.8</red>
      <green>0.2</green>
      <blue>0.2</blue>
    </emission>
    <condition>
      <property>systems/electrical/bus/avionics</property>
    </condition>
  </animation>

  <animation>
    <type>material</type>
    <object-name>sfd_canvas_screen_radar</object-name>
    <object-name>sfd_canvas_screen_eicas</object-name>
    <condition>
      <greater-than>
        <property>/controls/lighting/instruments-norm</property>
        <value>0.1</value>
      </greater-than>
    </condition>
    <emission>
      <factor-prop>/controls/lighting/instruments-norm</factor-prop>
      <red>1</red>
      <green>1</green>
      <blue>1</blue>
    </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>sfd_canvas_screen_radar</object-name>
    <object-name>sfd_canvas_screen_eicas</object-name>
    <condition>
      <equals>
        <property>/controls/lighting/instruments-norm</property>
        <value>0</value>
      </equals>
    </condition>
    <emission>
      <factor>1</factor>
      <red>1</red>
      <green>1</green>
      <blue>1</blue>
    </emission>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ emitting (enabled) -->
  <animation>
    <type>material</type>
    <object-name>sfd.bingo_on-emit</object-name>
    <object-name>sfd.aar-emit</object-name>
    <emission>
      <factor>1</factor>
      <red>0.9</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
  </animation>

  <!--
================================================================================
                                                         CONTROLS AND ANIMATIONS
================================================================================
  -->

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control acknowledge master caution -->
  <animation>
    <type>pick</type>
    <object-name>sfd.ack</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.event_acknowledge_master_caution();
          ]]>
        </script>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-sfd-ack</tooltip-id>
        <label>acknowledge master caution (o)</label>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control swap screens -->
  <animation>
    <type>pick</type>
    <object-name>sfd.swap-screen</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.event_swap_sfd_screen();
          ]]>
        </script>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-sfd-swp</tooltip-id>
        <label>swap screens</label>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control radar range -->
  <animation>
    <type>pick</type>
    <object-name>sfd.radar-range</object-name>
    <action>
      <button>3</button>
      <binding>
        <command>property-cycle</command>
        <wrap type="bool">0</wrap>
        <property>/instrumentation/my_aircraft/sfd/controls/radar_range</property>
        <value>5</value>
        <value>10</value>
        <value>20</value>
        <value>40</value>
        <value>80</value>
        <value>160</value>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>4</button>
      <binding>
        <command>property-cycle</command>
        <wrap type="bool">0</wrap>
        <property>/instrumentation/my_aircraft/sfd/controls/radar_range</property>
        <value>160</value>
        <value>80</value>
        <value>40</value>
        <value>20</value>
        <value>10</value>
        <value>5</value>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-sfd-range</tooltip-id>
        <label>Set range %3d</label>
        <property>/instrumentation/my_aircraft/sfd/controls/radar_range</property>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control bingo -->
  <animation>
    <type>pick</type>
    <object-name>sfd.set_bingo</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.inc_bingo(10);
          ]]>
        </script>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>1</button>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.inc_bingo(-10);
          ]]>
        </script>
      </binding>
    </action>
    <action>
      <button>3</button>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.inc_bingo(1);
          ]]>
        </script>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>4</button>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.inc_bingo(-1);
          ]]>
        </script>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-sfd-set-bingo</tooltip-id>
        <label>Set bingo</label>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control bingo on and swap bingo min/NM -->
  <animation>
    <type>pick</type>
    <object-name>sfd.swap_bingo</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/my_aircraft/fuel/bingo/is_bingo_enabled</property>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>1</button>
      <binding>
        <command>property-cycle</command>
        <wrap type="bool">1</wrap>
        <property>/instrumentation/my_aircraft/fuel/bingo/choose</property>
        <value>0</value>
        <value>1</value>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-sfd-swap-bingo</tooltip-id>
        <label>Enable bingo, MMB=Swap bingo : minute or NM</label>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ animation bingo on -->
  <animation>
    <type>select</type>
    <object-name>sfd.bingo_on-emit</object-name>
    <condition>
      <and>
        <property>systems/electrical/bus/avionics</property>
        <property>/instrumentation/my_aircraft/fuel/bingo/is_bingo_enabled</property>
      </and>
    </condition>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control extend refuelpod pipe -->
  <animation>
    <type>pick</type>
    <object-name>sfd.aar</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
my_aircraft_functions.event_control_pod_pipe(-1);
          ]]>
        </script>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-sfd-aar</tooltip-id>
        <label>Extend refuelpod pipe</label>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ animation extend refuelpod pipe -->
  <animation>
    <type>select</type>
    <object-name>sfd.aar-emit</object-name>
    <condition>
      <and>
        <property>systems/electrical/bus/avionics</property>
        <property>/controls/refuel-pod/pipe-extended</property>
      </and>
    </condition>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ animation screen eicas -->
  <animation>
    <type>select</type>
    <object-name>sfd_canvas_screen_eicas</object-name>
    <condition>
      <equals>
        <property>/instrumentation/my_aircraft/sfd/controls/display_sfd_screen</property>
        <value>EICAS</value>
      </equals>
    </condition>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ animation screen radar -->
  <animation>
    <type>select</type>
    <object-name>sfd_canvas_screen_radar</object-name>
    <condition>
      <equals>
        <property>/instrumentation/my_aircraft/sfd/controls/display_sfd_screen</property>
        <value>RADAR</value>
      </equals>
    </condition>
  </animation>

  <!--
================================================================================
                                                                        TEXT OSG
================================================================================
  -->
  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">Secondary Flight Display</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.016</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.08</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>.02</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>0.2</red>
      <green>1</green>
      <blue>0.2</blue>
    </emission>
  </animation>
  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

</PropertyList>
