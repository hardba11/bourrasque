  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control heading bug -->
  <!-- left/middle click = +-30 // wheel = +-1 -->
  <animation>
    <type>pick</type>
    <object-name>nd.hdg</object-name>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/autopilot/settings/heading-bug-deg</property>
        <step>30</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>1</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/autopilot/settings/heading-bug-deg</property>
        <step>-30</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>3</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/autopilot/settings/heading-bug-deg</property>
        <step>1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/autopilot/settings/heading-bug-deg</property>
        <step>-1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-nd-set-bug</tooltip-id>
        <label>Set heading-bug %3d</label>
        <mapping>heading</mapping>
        <property>/autopilot/settings/heading-bug-deg</property>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control range -->
  <animation>
    <type>pick</type>
    <object-name>nd.zoom</object-name>
    <action>
      <button>3</button>
      <binding>
        <command>property-cycle</command>
        <wrap type="bool">0</wrap>
        <property>/instrumentation/my_aircraft/nd/inputs/range-nm</property>
        <value>10</value>
        <value>20</value>
        <value>40</value>
        <value>80</value>
        <value>160</value>
        <value>320</value>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>4</button>
      <binding>
        <command>property-cycle</command>
        <wrap type="bool">0</wrap>
        <property>/instrumentation/my_aircraft/nd/inputs/range-nm</property>
        <value>320</value>
        <value>160</value>
        <value>80</value>
        <value>40</value>
        <value>20</value>
        <value>10</value>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
