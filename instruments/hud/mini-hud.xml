<?xml version="1.0" encoding="utf-8"?>
<!--
################################################################################
#
#                            MINI HUD CONFIGURATION
#
################################################################################

see :
- http://wiki.flightgear.org/Head-up_display
- http://wiki.flightgear.org/Canvas_HUD
-->
<PropertyList>
  <enable3d>false</enable3d>
  <label>
    <name>kt</name>
    <x>210</x>
    <y>200</y>
    <width>28</width>
    <height>8</height>
    <input>
      <property>/instrumentation/airspeed-indicator/true-speed-kt</property>
    </input>
    <format>%4.0f</format>
    <box>true</box>
    <halign>right</halign>
  </label>

  <label>
    <name>mag_deg</name>
    <x>250</x>
    <y>220</y>
    <width>20</width>
    <height>8</height>
    <input>
      <property>/instrumentation/my_aircraft/nd/outputs/indicated-heading</property>
    </input>
    <format>%3.0f</format>
    <halign>center</halign>
    <box>true</box>
  </label>

  <label>
    <name>ft</name>
    <x>290</x>
    <y>200</y>
    <width>38</width>
    <height>8</height>
    <input>
      <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    </input>
    <format>%6.0f</format>
    <halign>left</halign>
    <box>true</box>
  </label>

  <ladder>
    <name>Pitch Ladder</name>
    <type>pitch</type>
    <x>260</x>
    <y>200</y>
    <width>5</width>
    <height>5</height>
    <roll-input>
      <property>/orientation/roll-deg</property>
    </roll-input>
    <pitch-input>
      <property>/orientation/pitch-deg</property>
    </pitch-input>
    <compression-factor>2</compression-factor>
    <display-span>10</display-span>
    <divisions>5.0</divisions>
    <screen-hole>0</screen-hole>
    <tick-length>0</tick-length>
    <zero-bar-overlength>5</zero-bar-overlength>
    <enable-dive-bar-angle>false</enable-dive-bar-angle>
    <enable-dynamic-origin>false</enable-dynamic-origin>
    <enable-fuselage-ref-line>true</enable-fuselage-ref-line>
    <enable-target-spot>false</enable-target-spot>
    <enable-target-markers>false</enable-target-markers>
    <enable-velocity-vector>true</enable-velocity-vector>
    <enable-drift-marker>false</enable-drift-marker>
    <enable-alpha-bracket>false</enable-alpha-bracket>
    <enable-energy-marker>false</enable-energy-marker>
    <enable-climb-dive-marker>false</enable-climb-dive-marker>
    <enable-glide-slope-marker>false</enable-glide-slope-marker>
    <glide-slope>0.0</glide-slope>
    <enable-energy-worm>false</enable-energy-worm>
    <enable-waypoint-marker>false</enable-waypoint-marker>
    <enable-zenith>false</enable-zenith>
    <enable-nadir>false</enable-nadir>
  </ladder>

</PropertyList>

