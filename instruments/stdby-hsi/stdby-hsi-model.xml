<PropertyList>

  <name>stdby-hsi</name>
  <path>instrument_stdby-hsi.ac</path>

  <!--
================================================================================
                                                             OBJECTS DECLARATION
================================================================================
  -->

  <!-- ~~~~~~~~~~~~~~~~~~ opaque + transparent -->
  <animation>
    <object-name>hsi.box</object-name>
    <object-name>hsi.lbl_vor1</object-name>
    <object-name>hsi.lbl_vor2</object-name>
    <object-name>hsi.bug</object-name>
    <object-name>hsi.crs1_needle</object-name>
    <object-name>hsi.dev1_needle</object-name>
    <object-name>hsi.vor1_needle</object-name>
    <object-name>hsi.crs2_needle</object-name>
    <object-name>hsi.dev2_needle</object-name>
    <object-name>hsi.vor2_needle</object-name>
    <object-name>hsi.hdg_ring</object-name>
    <object-name>hsi.knob_course</object-name>
    <object-name>hsi.knob_hdg</object-name>
    <object-name>hsi.scale</object-name>
    <object-name>hsi.box-emit</object-name>
    <object-name>hsi.knob_course-emit</object-name>
    <object-name>hsi.knob_hdg-emit</object-name>
    <object-name>hsi.knob_vor</object-name>
    <object-name>hsi.knob_vor-emit</object-name>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ effects -->
  <effect>
    <inherits-from>Aircraft/bourrasque/models/effects/interior/interior-flashlight</inherits-from>
    <object-name>hsi.box</object-name>
    <object-name>hsi.lbl_vor1</object-name>
    <object-name>hsi.lbl_vor2</object-name>
    <object-name>hsi.bug</object-name>
    <object-name>hsi.crs1_needle</object-name>
    <object-name>hsi.dev1_needle</object-name>
    <object-name>hsi.vor1_needle</object-name>
    <object-name>hsi.crs2_needle</object-name>
    <object-name>hsi.dev2_needle</object-name>
    <object-name>hsi.vor2_needle</object-name>
    <object-name>hsi.hdg_ring</object-name>
    <object-name>hsi.knob_course</object-name>
    <object-name>hsi.knob_hdg</object-name>
    <object-name>hsi.scale</object-name>
    <object-name>hsi.box-emit</object-name>
    <object-name>hsi.knob_course-emit</object-name>
    <object-name>hsi.knob_hdg-emit</object-name>
    <object-name>hsi.knob_vor</object-name>
    <object-name>hsi.knob_vor-emit</object-name>
  </effect>

  <!-- ~~~~~~~~~~~~~~~~~~ emitting (flood) -->
  <animation>
    <type>material</type>
    <object-name>hsi.box</object-name>
    <emission>
      <factor-prop>/controls/lighting/panel-norm</factor-prop>
      <red>.3</red>
      <green>0</green>
      <blue>0</blue>
    </emission>
    <condition>
      <property>systems/electrical/bus/avionics</property>
    </condition>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ emitting (light) -->
  <animation>
    <type>material</type>
    <object-name>hsi.box-emit</object-name>
    <object-name>hsi.bug</object-name>
    <object-name>hsi.crs1_needle</object-name>
    <object-name>hsi.dev1_needle</object-name>
    <object-name>hsi.vor1_needle</object-name>
    <object-name>hsi.crs2_needle</object-name>
    <object-name>hsi.dev2_needle</object-name>
    <object-name>hsi.vor2_needle</object-name>
    <object-name>hsi.hdg_ring</object-name>
    <object-name>hsi.knob_course-emit</object-name>
    <object-name>hsi.knob_hdg-emit</object-name>
    <object-name>hsi.knob_vor-emit</object-name>
    <object-name>hsi.scale</object-name>
    <emission>
      <factor-prop>/controls/lighting/instruments-norm</factor-prop>
      <red>0.8</red>
      <green>0.2</green>
      <blue>0.2</blue>
    </emission>
    <condition>
      <property>systems/electrical/bus/avionics</property>
    </condition>
  </animation>

  <!--
================================================================================
                                                         CONTROLS AND ANIMATIONS
================================================================================
  -->

  <animation>
    <type>pick</type>
    <object-name>hsi.hdg_ring</object-name>
    <object-name>hsi.scale</object-name>
    <object-name>hsi.crs1_needle</object-name>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-stdby-hsi-heading</tooltip-id>
        <label>heading : %3d</label>
        <property>/orientation/heading-magnetic-deg</property>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ animation heading -->
  <animation>
    <type>rotate</type>
    <object-name>hsi.hdg_ring</object-name>
    <object-name>hsi.crs1_needle</object-name>
    <object-name>hsi.dev1_needle</object-name>
    <object-name>hsi.vor1_needle</object-name>
    <object-name>hsi.crs2_needle</object-name>
    <object-name>hsi.dev2_needle</object-name>
    <object-name>hsi.vor2_needle</object-name>
    <condition>
      <property>systems/electrical/bus/avionics</property>
    </condition>
    <property>/orientation/heading-magnetic-deg</property>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ animation heading bug -->
  <animation>
    <type>rotate</type>
    <object-name>hsi.bug</object-name>
    <condition>
      <property>systems/electrical/bus/avionics</property>
    </condition>
    <property>/autopilot/internal/heading-bug-error-deg</property>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ animation vor1 needle / radial (rotate) -->
  <animation>
    <type>rotate</type>
    <object-name>hsi.crs1_needle</object-name>
    <object-name>hsi.dev1_needle</object-name>
    <condition>
      <property>systems/electrical/bus/avionics</property>
    </condition>
    <property>/instrumentation/nav[0]/radials/selected-deg</property>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ animation vor1 needle / radial (translate) -->
  <animation>
    <type>translate</type>
    <object-name>hsi.dev1_needle</object-name>
    <condition>
      <property>systems/electrical/bus/avionics</property>
    </condition>
    <property>/instrumentation/nav[0]/heading-needle-deflection</property>
    <interpolation>
      <entry><ind>-10.0</ind><dep>-0.013</dep></entry>
      <entry><ind>0.0</ind><dep>0.0</dep></entry>
      <entry><ind>10.0</ind><dep>0.013</dep></entry>
    </interpolation>
    <axis>
      <x>0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ animation vor1 needle (rotate) -->
  <animation>
    <type>rotate</type>
    <object-name>hsi.vor1_needle</object-name>
    <condition>
      <property>systems/electrical/bus/avionics</property>
    </condition>
    <property>/instrumentation/nav[0]/heading-magnetic-deg</property>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ animation vor2 needle / radial (rotate) -->
  <animation>
    <type>rotate</type>
    <object-name>hsi.crs2_needle</object-name>
    <object-name>hsi.dev2_needle</object-name>
    <condition>
      <property>systems/electrical/bus/avionics</property>
    </condition>
    <property>/instrumentation/nav[1]/radials/selected-deg</property>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ animation vor2 needle / radial (translate) -->
  <animation>
    <type>translate</type>
    <object-name>hsi.dev2_needle</object-name>
    <condition>
      <property>systems/electrical/bus/avionics</property>
    </condition>
    <property>/instrumentation/nav[1]/heading-needle-deflection</property>
    <interpolation>
      <entry><ind>-10.0</ind><dep>-0.013</dep></entry>
      <entry><ind>0.0</ind><dep>0.0</dep></entry>
      <entry><ind>10.0</ind><dep>0.013</dep></entry>
    </interpolation>
    <axis>
      <x>0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ animation vor2 needle (rotate) -->
  <animation>
    <type>rotate</type>
    <object-name>hsi.vor2_needle</object-name>
    <condition>
      <property>systems/electrical/bus/avionics</property>
    </condition>
    <property>/instrumentation/nav[1]/heading-magnetic-deg</property>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ control radial vor knob -->
  <animation>
    <type>pick</type>
    <object-name>hsi.knob_course</object-name>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-stdby-hsi-radial1</tooltip-id>
        <label>Nav1 Radial %3d - Nav2 Radial %3d</label>
        <mapping>heading</mapping>
        <property>/instrumentation/nav[0]/radials/selected-deg</property>
        <property>/instrumentation/nav[1]/radials/selected-deg</property>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ control radial vor2 knob -->
  <!-- left/middle click = +-30 // wheel = +-1 -->
  <animation>
    <type>pick</type>
    <object-name>hsi.knob_course</object-name>
    <condition>
      <property>systems/electrical/bus/avionics</property>
      <equals>
        <property>/instrumentation/my_aircraft/stdby-hsi/controls/nav-selector</property>
        <value type="int">1</value>
      </equals>
    </condition>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/nav[0]/radials/selected-deg</property>
        <step>30</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>1</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/nav[0]/radials/selected-deg</property>
        <step>-30</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>3</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/nav[0]/radials/selected-deg</property>
        <step>1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/nav[0]/radials/selected-deg</property>
        <step>-1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ control radial vor2 knob -->
  <!-- left/middle click = +-30 // wheel = +-1 -->
  <animation>
    <type>pick</type>
    <object-name>hsi.knob_course</object-name>
    <condition>
      <property>systems/electrical/bus/avionics</property>
      <equals>
        <property>/instrumentation/my_aircraft/stdby-hsi/controls/nav-selector</property>
        <value type="int">2</value>
      </equals>
    </condition>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/nav[1]/radials/selected-deg</property>
        <step>30</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>1</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/nav[1]/radials/selected-deg</property>
        <step>-30</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>3</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/nav[1]/radials/selected-deg</property>
        <step>1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/nav[1]/radials/selected-deg</property>
        <step>-1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ animation radial knob -->
  <animation>
    <type>rotate</type>
    <object-name>hsi.knob_course</object-name>
    <object-name>hsi.knob_course-emit</object-name>
    <property>/instrumentation/nav[0]/radials/selected-deg</property>
    <factor>3</factor>
    <center>
      <x-m>.0075</x-m>
      <y-m>-.0339</y-m>
      <z-m>-.0333</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ animation vor select knob -->
  <animation>
    <type>rotate</type>
    <object-name>hsi.knob_vor</object-name>
    <object-name>hsi.knob_vor-emit</object-name>
    <property>/instrumentation/my_aircraft/stdby-hsi/controls/nav-selector</property>
    <interpolation>
      <entry><ind>1</ind><dep>0</dep></entry>
      <entry><ind>2</ind><dep>-90</dep></entry>
    </interpolation>
    <center>
      <x-m>.0075</x-m>
      <y-m>-.0339</y-m>
      <z-m>-.0333</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ control vor1 select knob -->
  <animation>
    <type>pick</type>
    <object-name>hsi.lbl_vor1</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>/instrumentation/my_aircraft/stdby-hsi/controls/nav-selector</property>
        <value type="int">1</value>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-stdby-hsi-radial1</tooltip-id>
        <label>Nav1 Radial %3d</label>
        <mapping>heading</mapping>
        <property>/instrumentation/nav[0]/radials/selected-deg</property>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ control vor2 select knob -->
  <animation>
    <type>pick</type>
    <object-name>hsi.lbl_vor2</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>/instrumentation/my_aircraft/stdby-hsi/controls/nav-selector</property>
        <value type="int">2</value>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-stdby-hsi-radial2</tooltip-id>
        <label>Nav2 Radial %3d</label>
        <mapping>heading</mapping>
        <property>/instrumentation/nav[1]/radials/selected-deg</property>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ control heading bug knob -->
  <!-- left/middle click = +-30 // wheel = +-1 -->
  <animation>
    <type>pick</type>
    <object-name>hsi.knob_hdg</object-name>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/autopilot/settings/heading-bug-deg</property>
        <step>30</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>1</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/autopilot/settings/heading-bug-deg</property>
        <step>-30</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>3</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/autopilot/settings/heading-bug-deg</property>
        <step>1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/autopilot/settings/heading-bug-deg</property>
        <step>-1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-stdby-hsi-set-bug</tooltip-id>
        <label>Set heading-bug %3d</label>
        <mapping>heading</mapping>
        <property>/autopilot/settings/heading-bug-deg</property>
      </binding>
    </hovered>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ animation heading bug knob -->
  <animation>
    <type>rotate</type>
    <object-name>hsi.knob_hdg</object-name>
    <object-name>hsi.knob_hdg-emit</object-name>
    <property>/autopilot/settings/heading-bug-deg</property>
    <factor>3</factor>
    <center>
      <x-m>.0144</x-m>
      <y-m>.0312</y-m>
      <z-m>-.0339</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <!--
================================================================================
                                                                        TEXT OSG
================================================================================
  -->
  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">stdby Horizontal Situation Indicator</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.016</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.08</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>.02</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>0.2</red>
      <green>1</green>
      <blue>0.2</blue>
    </emission>
  </animation>
  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

</PropertyList>
