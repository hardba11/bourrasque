<?xml version="1.0" encoding="utf-8"?>

<PropertyList>
  <name>Bourrasque Wingmans</name>
  <scenario>
    <description>
      2 wingmens - non-tactical
      This scenario formates 2 Bourrasque to the parent ac at the position
      designated by the x,y,z offsets.
    </description>

    <entry>
      <name>Bravo Lima</name>
      <type>wingman</type>
      <model>Aircraft/bourrasque/models/brsq.xml</model>
      <x-offset>-30</x-offset>
      <y-offset>-30</y-offset>
      <z-offset>0</z-offset>
      <formate>true</formate>
      <max-speed-kts>650</max-speed-kts>
      <coefficients>
        <heading>5.0</heading>
        <pitch>4.0</pitch>
        <bank>4.0</bank>
        <speed>2.5</speed>
      </coefficients>
    </entry>

    <entry>
      <name>Bravo Kilo</name>
      <type>wingman</type>
      <model>Aircraft/bourrasque/models/brsq.xml</model>
      <x-offset>-60</x-offset>
      <y-offset>-60</y-offset>
      <z-offset>0</z-offset>
      <formate>true</formate>
      <max-speed-kts>650</max-speed-kts>
      <coefficients>
        <heading>5.0</heading>
        <pitch>4.0</pitch>
        <bank>4.0</bank>
        <speed>2.5</speed>
      </coefficients>
    </entry>

  </scenario>

</PropertyList>
