#
#          THIS FILE DEFINES THE FLY BY WIRE AND AUTOPILOT BEHAVIOUR
#
################################################################################

http://www.flightgear.org/Docs/XMLAutopilot/node4.html
file Aircraft/Generic/generic-autopilot-helper.xml

-->

<PropertyList>

  <!--
================================================================================
                                                                     FLY BY WIRE
================================================================================

Comprendre les termes du PID :

    P (Proportionnel) : Réagit à l'erreur actuelle.
    I (Intégral) : Réagit à l'accumulation des erreurs passées.
    D (Dérivé) : Réagit à la prédiction de l'erreur future.

<Kp>/_debug/Kp</Kp><Ti>/_debug/Ti</Ti><Td>/_debug/Td</Td>

1- initialisation
  <Kp>0.5</Kp><Ti>10000000000</Ti><Td>0</Td>
2- augmenter k jusqu a une oscillation continue autour de la consigne 
   avec amplitude constante
3-    Kp / 2
4- reduire Ti  pour reduire le temps de montee jusqu a oscillation continue
5-    Ti * 3
6- augmenter Td jusqu a oscillation continue
7-    Td / 3
  -->
  <!--
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
                                                                            ROLL
  -->
  <pid-controller>
    <name>fbw-aileron</name>
    <debug>false</debug>
    <enable>
      <condition>
        <equals><property>/gear/gear[1]/wow</property><value>0</value></equals>
        <equals><property>/gear/gear[2]/wow</property><value>0</value></equals>
      </condition>
    </enable>
    <feedback-if-disabled>true</feedback-if-disabled>
    <input>
      <expression>
        <table>
          <property>/orientation/roll-rate-degps</property>
          <entry><ind>-1000</ind><dep>-1.000</dep></entry>
          <entry><ind>-300</ind><dep>-1.000</dep></entry>
          <entry><ind>-270</ind><dep>-0.999</dep></entry>
          <entry><ind>-100</ind><dep>-0.500</dep></entry>
          <entry><ind>0.0</ind><dep>0.000</dep></entry>
          <entry><ind>100</ind><dep>0.500</dep></entry>
          <entry><ind>270</ind><dep>0.999</dep></entry>
          <entry><ind>300</ind><dep>1.000</dep></entry>
          <entry><ind>1000</ind><dep>1.000</dep></entry>
        </table>
      </expression>
    </input>
    <reference>
      <expression>
        <table>
          <property>/controls/flight/aileron</property>
          <entry><ind>-1.000</ind><dep>-0.999</dep></entry>
          <entry><ind>-0.900</ind><dep>-0.700</dep></entry>
          <entry><ind>-0.600</ind><dep>-0.250</dep></entry>
          <entry><ind>-0.200</ind><dep>-0.050</dep></entry>
          <entry><ind>-0.009</ind><dep>0.000</dep></entry>
          <entry><ind>0.000</ind><dep>0.000</dep></entry>
          <entry><ind>0.009</ind><dep>0.000</dep></entry>
          <entry><ind>0.200</ind><dep>0.050</dep></entry>
          <entry><ind>0.600</ind><dep>0.250</dep></entry>
          <entry><ind>0.900</ind><dep>0.700</dep></entry>
          <entry><ind>1.000</ind><dep>0.999</dep></entry>
        </table>
      </expression>
    </reference>
    <output>/controls/flight/fbw-aileron</output>
    <config>
      <Kp>
        <expression>
          <table>
            <property>/velocities/airspeed-kt</property>
            <entry><ind>200</ind><dep>2.6</dep></entry>
            <entry><ind>300</ind><dep>2.5</dep></entry>
            <entry><ind>450</ind><dep>2.3</dep></entry>
            <entry><ind>600</ind><dep>2.0</dep></entry>
            <entry><ind>800</ind><dep>1.3</dep></entry>
            <entry><ind>1000</ind><dep>1.2</dep></entry>
            <entry><ind>1200</ind><dep>1.1</dep></entry>
            <entry><ind>1400</ind><dep>1.0</dep></entry>
            <entry><ind>1600</ind><dep>0.9</dep></entry>
            <entry><ind>4000</ind><dep>.1</dep></entry>
          </table>
        </expression>
      </Kp>
      <Ti>0.1</Ti>
      <Td>0.00002</Td>
      <u_min>
        <expression>
          <table>
            <property>/velocities/airspeed-kt</property>
            <entry><ind>100</ind><dep>-1.0</dep></entry>
            <entry><ind>650</ind><dep>-1.0</dep></entry>
            <entry><ind>2000</ind><dep>-0.1</dep></entry>
          </table>
        </expression>
      </u_min>
      <u_max>
        <expression>
          <table>
            <property>/velocities/airspeed-kt</property>
            <entry><ind>100</ind><dep>1.0</dep></entry>
            <entry><ind>650</ind><dep>1.0</dep></entry>
            <entry><ind>2000</ind><dep>0.1</dep></entry>
          </table>
        </expression>
      </u_max>
    </config>
  </pid-controller>
  <filter>
    <name>fcm-aileron</name>
    <type>gain</type>
    <gain>
      <expression>
        <table>
          <property>/velocities/airspeed-kt</property>
          <entry><ind>100</ind><dep>1.0</dep></entry>
          <entry><ind>650</ind><dep>1.0</dep></entry>
          <entry><ind>2000</ind><dep>0.1</dep></entry>
        </table>
      </expression>
    </gain>
    <input>
      <condition>
        <equals><property>/gear/gear[1]/wow</property><value>0</value></equals>
        <equals><property>/gear/gear[2]/wow</property><value>0</value></equals>
      </condition>
      <property>/controls/flight/fbw-aileron</property>
    </input>
    <input>/controls/flight/aileron</input>
    <output>/controls/flight/fcm-aileron</output>
  </filter>

  <!--
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
                                                                           PITCH
  -->

<!-- zone morte du manche -->
  <filter>
    <name>command-pitch-norm</name>
    <type>gain</type>
    <gain>1.0</gain>
    <input>
      <expression>
        <table>
          <property>/controls/flight/elevator</property>
          <entry><ind>-1.00</ind><dep>-0.999</dep></entry>
          <entry><ind>-0.20</ind><dep>-0.050</dep></entry>
          <entry><ind>-0.01</ind> <dep>0.000</dep></entry>
          <entry> <ind>0.00</ind> <dep>0.000</dep></entry>
          <entry> <ind>0.01</ind> <dep>0.000</dep></entry>
          <entry> <ind>0.20</ind> <dep>0.050</dep></entry>
          <entry> <ind>1.00</ind> <dep>0.999</dep></entry>
        </table>
      </expression>
    </input>
    <output>/controls/flight/fbw/command-pitch-norm</output>
    <min>-1</min>
    <max>1</max>
  </filter>

<!-- mapping debattement manche -> aoa -->
  <filter>
    <name>target-aoa</name>
    <type>gain</type>
    <gain>1.0</gain>
    <input>
      <expression>
        <table>
          <property>/controls/flight/fbw/command-pitch-norm</property>
          <entry><ind>-1.000</ind><dep>15</dep></entry>
          <entry><ind>0.000</ind><dep>0</dep></entry>
          <entry><ind>1.000</ind><dep>-15</dep></entry>
        </table>
      </expression>
    </input>
    <output>/controls/flight/fbw/target-aoa</output>
    <min>-8</min>
    <max>17</max>
  </filter>

<!-- mapping debattement manche -> g -->
  <filter>
    <name>target-g</name>
    <type>gain</type>
    <gain>1.0</gain>
    <input>
      <expression>
        <table>
          <property>/controls/flight/fbw/command-pitch-norm</property>
          <entry><ind>-1.000</ind><dep>12.5</dep></entry>
          <entry><ind>0.000</ind><dep>1</dep></entry>
          <entry><ind>1.000</ind><dep>-10.5</dep></entry>
        </table>
      </expression>
    </input>
    <output>/controls/flight/fbw/target-g</output>
    <min>-3.5</min>
    <max>12.5</max>
  </filter>

<!-- le manche agit sur l'aoa ou les Gs selon la vitesse -->
  <pid-controller>
    <name>fbw-elevator</name>
    <debug>false</debug>
    <feedback-if-disabled>true</feedback-if-disabled>
    <input>/controls/flight/fbw/target-g</input>
    <reference>/accelerations/pilot-g</reference>
    <input>
      <condition>
        <less-than><property>/velocities/airspeed-kt</property><value>250</value></less-than>
      </condition>
      <property>/controls/flight/fbw/target-aoa</property>
    </input>
    <reference>
      <condition>
        <less-than><property>/velocities/airspeed-kt</property><value>250</value></less-than>
      </condition>
      <property>/orientation/alpha-deg</property>
    </reference>
    <output>/controls/flight/fbw-elevator</output>
    <config>
<!-- 
1- demarrage
  <Kp>0.5</Kp><Ti>10000000000</Ti><Td>0</Td>
2- augmenter k jusqu a une oscillation continue avec amplitude constante
3-    Kp / 2
4- reduire Ti jusqu a oscillation continue
5-    Ti * 3
6- augmenter Td jusqu a oscillation continue
7-    Td / 3

420kt 5000ft 
      <Kp>.07</Kp><Ti>2.5</Ti><Td>0.00000001</Td>

650kt 5000ft 
      <Kp>.05</Kp><Ti>7</Ti><Td>0.00001</Td>
-->
      <Kp>
        <expression>
          <table>
            <property>/velocities/airspeed-kt</property>
            <entry><ind> 200</ind><dep>.07</dep></entry>
            <entry><ind> 420</ind><dep>.07</dep></entry>
            <entry><ind> 650</ind><dep>.05</dep></entry>
            <entry><ind> 700</ind><dep>.03</dep></entry>
            <entry><ind> 900</ind><dep>.012</dep></entry>
            <entry><ind>1200</ind><dep>.012</dep></entry>
          </table>
        </expression>
      </Kp>
      <Ti>
        <expression>
          <table>
            <property>/velocities/airspeed-kt</property>
            <entry><ind> 200</ind><dep>2.5</dep></entry>
            <entry><ind> 420</ind><dep>2.5</dep></entry>
            <entry><ind> 650</ind><dep>7</dep></entry>
            <entry><ind> 700</ind><dep>9</dep></entry>
            <entry><ind> 900</ind><dep>1</dep></entry>
            <entry><ind>1200</ind><dep>1</dep></entry>
          </table>
        </expression>
      </Ti>
      <Td>
        <expression>
          <table>
            <property>/velocities/airspeed-kt</property>
            <entry><ind> 200</ind><dep>0.00000001</dep></entry>
            <entry><ind> 420</ind><dep>0.00000001</dep></entry>
            <entry><ind> 650</ind><dep>0.00001</dep></entry>
            <entry><ind> 700</ind><dep>0.001</dep></entry>
            <entry><ind> 900</ind><dep>0.001</dep></entry>
            <entry><ind>1200</ind><dep>0.001</dep></entry>
          </table>
        </expression>
      </Td>
      <min>-1</min>
      <max>1</max>
    </config>
  </pid-controller>

  <filter>
    <name>fcm-elevator</name>
    <type>gain</type>
    <gain>1.0</gain>
    <input>
      <property>/controls/flight/fbw-elevator</property>
    </input>
    <output>/controls/flight/fcm-elevator</output>
  </filter>

  <!--
================================================================================
                                                                       AUTOPILOT
================================================================================
  -->
  <!-- Bourrasque Autopilot -->
  <!-- Retuned and Overhauled -->
