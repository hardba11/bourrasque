    <object-name>avantbrasD</object-name>
    <object-name>mainD</object-name>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ left arm -->
  <animation>
    <name>bloc_brasG</name>
    <object-name>brasG</object-name>
    <object-name>avantbrasG</object-name>
    <object-name>mainG</object-name>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ left forearm -->
  <animation>
    <name>bloc_avantbrasG</name>
    <object-name>avantbrasG</object-name>
    <object-name>mainG</object-name>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ right leg -->
  <animation>
    <name>bloc_jambeD</name>
    <object-name>jambeD</object-name>
    <object-name>molletD</object-name>
    <object-name>piedD</object-name>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ right foreleg -->
  <animation>
    <name>bloc_molletD</name>
    <object-name>molletD</object-name>
    <object-name>piedD</object-name>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ left leg -->
  <animation>
    <name>bloc_jambeG</name>
    <object-name>jambeG</object-name>
    <object-name>molletG</object-name>
    <object-name>piedG</object-name>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ left foreleg -->
  <animation>
    <name>bloc_molletG</name>
    <object-name>molletG</object-name>
    <object-name>piedG</object-name>
  </animation>

  <!--
================================================================================
                                                                       ANIMATION
================================================================================

________________________________________________________________________________
                                                                       SHOW/HIDE
  -->

  <!-- ~~~~~~~~~~~~~~~~~~ hide head if copilot view -->
  <animation>
    <object-name>bloc_tete</object-name>
    <type>select</type>
    <condition>
      <or>
        <not-equals>
          <property>/sim/current-view/view-number</property>
          <value>8</value>
        </not-equals>
        <not-equals>
          <property>sim/model/name</property>
          <value>brsq</value>
        </not-equals>
      </or>
    </condition>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ hide body and arms if view side panels -->
  <animation>
    <object-name>bloc_pilote</object-name>
    <type>select</type>
    <condition>
      <or>
        <not-equals>
          <property>/sim/current-view/view-number</property>
          <value>0</value>
        </not-equals>
        <and>
          <equals>
            <property>/sim/current-view/view-number</property>
            <value>0</value>
          </equals>
          <or>
            <greater-than>
              <property>/sim/current-view/pitch-offset-deg</property>
              <value>-40</value>
            </greater-than>
            <less-than>
              <property>/sim/current-view/heading-offset-deg</property>
              <value>60</value>
            </less-than>
            <greater-than>
              <property>/sim/current-view/heading-offset-deg</property>
              <value>300</value>
            </greater-than>
          </or>
        </and>
      </or>
      <or>
        <not-equals>
          <property>/sim/current-view/view-number</property>
          <value>8</value>
        </not-equals>
        <and>
          <equals>
            <property>/sim/current-view/view-number</property>
            <value>8</value>
          </equals>
          <or>
            <greater-than>
              <property>/sim/current-view/pitch-offset-deg</property>
              <value>-40</value>
            </greater-than>
            <less-than>
              <property>/sim/current-view/heading-offset-deg</property>
              <value>60</value>
            </less-than>
            <greater-than>
              <property>/sim/current-view/heading-offset-deg</property>
              <value>300</value>
            </greater-than>
          </or>
        </and>
      </or>
    </condition>
  </animation>

  <!--
________________________________________________________________________________
                                                                          HELMET
  -->
  <animation>
    <type>rotate</type>
    <object-name>lunettes</object-name>
    <property>/controls/pax/helmet</property>
    <center>
      <x-m>-3.1735</x-m>
      <y-m>0</y-m>
      <z-m>1.134</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

