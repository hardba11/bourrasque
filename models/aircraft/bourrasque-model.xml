________________________________________________________________________________
                                                                          CANARD
  -->

  <!-- ~~~~~~~~~~~~~~~~~~ group -->
  <animation>
    <name>block_canard</name>
    <object-name>canard_L</object-name>
    <object-name>canard_R</object-name>
  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~ movement -->
  <animation>
    <type>rotate</type>
    <object-name>block_canard</object-name>
<!--
gear=0 => -12    (slat x ((gear - 1) x 12 x bus) + (gear x 15 x bus))) + ((bus - 1) x -18)=-12
gear=1 => 15     (slat x ((gear - 1) x 12 x bus) + (gear x 15 x bus))) + ((bus - 1) x -18)=15
bus=0 => 18      (slat x ((gear - 1) x 12 x bus) + (gear x 15 x bus))) + ((bus - 1) x -18)=18
-->
    <expression>
      <sum>
        <product>
          <property>surface-positions/slat-pos-norm</property>
          <sum>
            <product>
              <value>12</value>
              <sum>
                <property>gear/gear[0]/position-norm</property>
                <value>-1</value>
              </sum>
              <property>/systems/electrical/bus/commands</property>
            </product>
            <product>
              <value>15</value>
              <property>gear/gear[0]/position-norm</property>
              <property>/systems/electrical/bus/commands</property>
            </product>
          </sum>
        </product>
        <product>
          <value>-18</value>
          <sum>
            <property>/systems/electrical/bus/commands</property>
            <value>-1</value>
          </sum>
        </product>
      </sum>
    </expression>
    <center>
      <x-m>-1.69</x-m>
      <y-m>0</y-m>
      <z-m>0.5</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

