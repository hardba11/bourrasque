<?xml version="1.0" encoding="utf-8"?>

<!-- /engines/engine[0]/reheat = sim/multiplay/generic/float[8]   models/effects/reheat/  -->
<PropertyList>

  <path>reheat_outside_box.ac</path>
  <nopreview />

  <animation>
    <type>scale</type>
    <object-name>reheat_outside_box</object-name>
    <property>sim/multiplay/generic/float[8]</property>
    <x-min>.4</x-min>
    <y-min>.55</y-min>
    <z-min>.55</z-min>
    <y-max>1</y-max>
    <z-max>1</z-max>
    <x-factor>.8</x-factor>
    <y-factor>.2</y-factor>
    <z-factor>.2</z-factor>
  </animation>

  <animation>
    <type>select</type>
    <object-name>reheat_outside_box</object-name>
    <condition>
      <and>
        <greater-than>
          <property>sim/multiplay/generic/float[8]</property>
          <value>0.02</value>
        </greater-than>
        <equals>
          <property>engines/engine[0]/stopped</property>
          <value>0</value>
        </equals>
        <not><property>/sim/crashed</property></not>
      </and>
    </condition>
  </animation>

  <effect>
    <inherits-from>reheat_outside_color_orange</inherits-from>
    <object-name>reheat_outside_box</object-name>
  </effect>

</PropertyList>

