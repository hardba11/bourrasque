  <!-- pitch -->
  <animation>
    <type>rotate</type>
    <object-name>shadow.fuselage</object-name>
    <object-name>shadow.gears</object-name>
    <object-name>shadow.front-gears</object-name>
    <object-name>shadow.center-tank1250L</object-name>
    <object-name>shadow.center-tank2000L</object-name>
    <object-name>shadow.wing-tanks1250L</object-name>
    <object-name>shadow.wing-tanks2000L</object-name>
    <object-name>shadow.wing-ext-tanks1250L</object-name>
    <object-name>shadow.perche_ravitaillement</object-name>
    <property>/orientation/pitch-deg</property>
    <factor>-1</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <!-- roll -->
  <animation>
    <type>rotate</type>
    <object-name>shadow.fuselage</object-name>
    <object-name>shadow.gears</object-name>
    <object-name>shadow.front-gears</object-name>
    <object-name>shadow.center-tank1250L</object-name>
    <object-name>shadow.center-tank2000L</object-name>
    <object-name>shadow.wing-tanks1250L</object-name>
    <object-name>shadow.wing-tanks2000L</object-name>
    <object-name>shadow.wing-ext-tanks1250L</object-name>
    <object-name>shadow.perche_ravitaillement</object-name>
    <property>/orientation/roll-deg</property>
    <factor>1</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

</PropertyList>