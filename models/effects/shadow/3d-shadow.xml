<?xml version="1.0" encoding="utf-8"?>

<PropertyList>

  <path>3d-shadow.ac</path>
  <nopreview />

  <offsets>
    <pitch-deg>1.3</pitch-deg>
    <x-m>0</x-m>
    <y-m>0</y-m>
    <z-m>-.3</z-m>
  </offsets>

  <animation>
    <type>material</type>
    <object-name>shadow.fuselage</object-name>
    <object-name>shadow.gears</object-name>
    <object-name>shadow.front-gears</object-name>
    <object-name>shadow.center-tank1250L</object-name>
    <object-name>shadow.center-tank2000L</object-name>
    <object-name>shadow.wing-tanks1250L</object-name>
    <object-name>shadow.wing-tanks2000L</object-name>
    <object-name>shadow.wing-ext-tanks1250L</object-name>
    <object-name>shadow.perche_ravitaillement</object-name>
  </animation>

  <effect>
    <inherits-from>Effects/shadow-vol</inherits-from>
    <object-name>shadow.fuselage</object-name>
    <object-name>shadow.gears</object-name>
    <object-name>shadow.front-gears</object-name>
    <object-name>shadow.center-tank1250L</object-name>
    <object-name>shadow.center-tank2000L</object-name>
    <object-name>shadow.wing-tanks1250L</object-name>
    <object-name>shadow.wing-tanks2000L</object-name>
    <object-name>shadow.wing-ext-tanks1250L</object-name>
    <object-name>shadow.perche_ravitaillement</object-name>
  </effect>
  <animation>
    <type>noshadow</type>
    <object-name>shadow.fuselage</object-name>
    <object-name>shadow.gears</object-name>
    <object-name>shadow.front-gears</object-name>
    <object-name>shadow.center-tank1250L</object-name>
    <object-name>shadow.center-tank2000L</object-name>
    <object-name>shadow.wing-tanks1250L</object-name>
    <object-name>shadow.wing-tanks2000L</object-name>
    <object-name>shadow.wing-ext-tanks1250L</object-name>
    <object-name>shadow.perche_ravitaillement</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>shadow.fuselage</object-name>
    <condition>
      <less-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.45</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>shadow.front-gears</object-name>
    <object-name>shadow.gears</object-name>
    <condition>
      <and>
        <property>controls/gear/gear-down</property>
        <less-than>
          <property>/sim/time/sun-angle-rad</property>
          <value>1.45</value>
        </less-than>
      </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>shadow.center-tank1250L</object-name>
    <condition>
      <and>
        <property>sim/model/center-tank-1250</property>
        <less-than>
          <property>/sim/time/sun-angle-rad</property>
          <value>1.45</value>
        </less-than>
      </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>shadow.center-tank2000L</object-name>
    <condition>
      <and>
        <property>sim/model/center-tank-2000</property>
        <less-than>
          <property>/sim/time/sun-angle-rad</property>
          <value>1.45</value>
        </less-than>
      </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>shadow.wing-tanks1250L</object-name>
    <condition>
      <and>
        <property>sim/model/wing-tanks-1250</property>
        <less-than>
          <property>/sim/time/sun-angle-rad</property>
          <value>1.45</value>
        </less-than>
      </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>shadow.wing-tanks2000L</object-name>
    <condition>
      <and>
        <property>sim/model/wing-tanks-2000</property>
        <less-than>
          <property>/sim/time/sun-angle-rad</property>
          <value>1.45</value>
        </less-than>
      </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>shadow.wing-ext-tanks1250L</object-name>
    <condition>
      <and>
        <property>sim/model/wing-tanks-1250</property>
        <property>sim/model/wing-tanks-2000</property>
        <less-than>
          <property>/sim/time/sun-angle-rad</property>
          <value>1.45</value>
        </less-than>
      </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>shadow.perche_ravitaillement</object-name>
    <condition>
      <and>
        <property>systems/refuel/serviceable</property>
        <less-than>
          <property>/sim/time/sun-angle-rad</property>
          <value>1.45</value>
        </less-than>
      </and>
    </condition>
  </animation>


