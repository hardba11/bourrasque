<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>


  <particlesystem>

    <name>BulletSmoke</name>
    <texture>smoke.png</texture>

    <emissive type="bool">false</emissive>
    <lighting type="bool">false</lighting>

    <attach>world</attach>

    <placer>
      <type>point</type>
    </placer>

    <shooter>
      <theta-min-deg> -180 </theta-min-deg>
      <theta-max-deg>  180 </theta-max-deg>
      <phi-min-deg>   -180 </phi-min-deg>
      <phi-max-deg>    180 </phi-max-deg>
      <speed-mps>
        <value> 25 </value>
        <spread> 2 </spread>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec> 0 </x-min-deg-sec>
        <y-min-deg-sec> 0 </y-min-deg-sec>
        <z-min-deg-sec> 0 </z-min-deg-sec>
        <x-max-deg-sec> 0 </x-max-deg-sec>
        <y-max-deg-sec> 0 </y-max-deg-sec>
        <z-max-deg-sec> 0 </z-max-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <value>  1 </value>
        <spread> 2 </spread>
      </particles-per-sec>
    </counter>

    <align>billboard</align>

    <particle>
      <start>
        <color>
          <red><value>   0.20 </value></red>
          <green><value> 0.20 </value></green>
          <blue><value>  0.15 </value></blue>
          <alpha><value> 0.60 </value></alpha>
        </color>
        <size><value> 2</value></size>
      </start>

      <end>
        <color>
          <red><value>   0.40 </value></red>
          <green><value> 0.40 </value></green>
          <blue><value>  0.40 </value></blue>
          <alpha><value> 0.05 </value></alpha>
        </color>
        <size><value> 5 </value></size>
      </end>

      <life-sec>
        <value> 1 </value>
      </life-sec>

      <mass-kg>  5.0 </mass-kg>
      <radius-m> 0.4 </radius-m>
    </particle>

    <program>
      <fluid   type="string"> air </fluid>
      <gravity type="bool">  true </gravity>
      <wind    type="bool">  true </wind>
    </program>

  </particlesystem>

</PropertyList>
