<?xml version="1.0" encoding="utf-8"?>

<PropertyList>

  <filter>
    <type>gain</type>
    <gain>-1</gain>
    <input>/rendering/scene/diffuse/green</input>
    <reference>1</reference>
    <output>/sim/model/rendering/relative-navlight-luminosity</output>
    <min>.3</min>
    <max>1</max>
  </filter>

  <filter>
    <type>gain</type>
    <gain>2</gain>
    <input>/sim/model/rendering/relative-navlight-luminosity</input>
    <output>/sim/model/rendering/relative-strobelight-luminosity</output>
  </filter>

  <filter>
    <type>gain</type>
    <gain>.3</gain>
    <input>/sim/model/rendering/relative-navlight-luminosity</input>
    <output>/sim/model/rendering/relative-taxilight-luminosity</output>
    <min>.1</min>
    <max>1</max>
  </filter>

  <filter>
    <type>gain</type>
    <gain>0.1</gain>
    <input>
      <expression>
        <sum>
          <property>orientation/alpha-deg</property>
          <value>-1</value>
        </sum>
      </expression>
    </input>
    <output>/controls/flight/slats</output>
    <min>0</min>
    <max>1</max>
  </filter>

  <filter>
    <type>gain</type>
    <gain>0.04</gain>
    <input>
      <expression>
        <sum>
          <product>
            <value>-25</value>
            <sum>
              <property>sim/model/hydraulic</property>
              <value>-1</value>
            </sum>
          </product>
          <product>
            <property>sim/model/hydraulic</property>
            <sum>
              <property>surface-positions/out-left-aileron-pos-norm</property>
              <property>surface-positions/out-elevator-pos-norm</property>
            </sum>
            <value>8</value>
          </product>
        </sum>
      </expression>
    </input>
    <output>surface-positions/left-aileron-pos-norm</output>
    <min>-1</min>
    <max>1</max>
  </filter>

  <filter>
    <type>gain</type>
    <gain>0.04</gain>
    <input>
      <expression>
        <sum>
          <product>
            <value>-25</value>
            <sum>
              <property>sim/model/hydraulic</property>
              <value>-1</value>
            </sum>
          </product>
          <product>
            <property>sim/model/hydraulic</property>
            <sum>
              <property>surface-positions/out-right-aileron-pos-norm</property>
              <property>surface-positions/out-elevator-pos-norm</property>
            </sum>
            <value>8</value>
          </product>
        </sum>
      </expression>
    </input>
    <output>surface-positions/right-aileron-pos-norm</output>
    <min>-1</min>
    <max>1</max>
  </filter>

  <filter>
    <type>gain</type>
    <gain>0.04</gain>
    <input>
      <expression>
        <sum>
          <product>
            <value>-25</value>
            <sum>
              <property>sim/model/hydraulic</property>
              <value>-1</value>
            </sum>
          </product>
          <product>
            <property>sim/model/hydraulic</property>
            <property>surface-positions/out-elevator-pos-norm</property>
            <value>8</value>
          </product>
        </sum>
      </expression>
    </input>
    <output>surface-positions/elevator-pos-norm</output>
    <min>-1</min>
    <max>1</max>
  </filter>

</PropertyList>

