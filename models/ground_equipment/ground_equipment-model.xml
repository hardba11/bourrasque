<PropertyList>

  <path>ground_equipment.ac</path>
  <nopreview />

  <!--
================================================================================
                                                             OBJECTS DECLARATION
================================================================================
  -->

  <animation>
    <type>material</type>
    <object-name>ground_equipment.engine</object-name>
    <object-name>ground_equipment.flags</object-name>
    <object-name>ground_equipment.gears</object-name>
    <object-name>ground_equipment.scale</object-name>
    <object-name>external-power-unit.box</object-name>
    <object-name>external-power-unit.wire</object-name>
    <object-name>fuel-truck.base</object-name>
    <object-name>fuel-truck.pipe</object-name>
    <object-name>fuel-truck.tank</object-name>
    <object-name>extincteur</object-name>
    <object-name>cone</object-name>
  </animation>

  <!--
================================================================================
                                                         CONTROLS AND ANIMATIONS
================================================================================
  -->

  <!-- ~~~~~~~~~~~~~~~~~~ engines covers + flags -->
  <animation>
    <type>select</type>
    <object-name>ground_equipment.engine</object-name>
    <object-name>ground_equipment.flags</object-name>
    <condition>
      <property>sim/model/ground-equipment-e</property>
      <equals>
        <property>engines/engine[0]/stopped</property>
        <value type="int">1</value>
      </equals>
      <equals>
        <property>engines/engine[1]/stopped</property>
        <value type="int">1</value>
      </equals>
    </condition>
  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~~~~~ hide engines covers + flags -->
  <animation>
    <type>pick</type>
    <object-name>ground_equipment.engine</object-name>
    <object-name>ground_equipment.flags</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/ground-equipment-e</property>
      </binding>
    </action>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ gears chocks -->
  <animation>
    <type>select</type>
    <object-name>ground_equipment.gears</object-name>
    <condition>
      <property>sim/model/ground-equipment-g</property>
      <or>
        <less-than>
          <property>velocities/groundspeed-kt</property>
          <value>2</value>
        </less-than>
        <equals>
          <property>engines/engine[0]/stopped</property>
          <value type="int">1</value>
        </equals>
      </or>
    </condition>
  </animation>
  <animation> <!-- as the object touchs the ground, I had to add a translation -->
    <type>translate</type>
    <object-name>ground_equipment.gears</object-name>
    <offset-m>-.1</offset-m>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~~~~~ hide gears chocks -->
  <animation>
    <type>pick</type>
    <object-name>ground_equipment.gears</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/ground-equipment-g</property>
      </binding>
    </action>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ scale -->
  <animation>
    <type>select</type>
    <object-name>ground_equipment.scale</object-name>
    <condition>
      <property>sim/model/ground-equipment-s</property>
      <or>
        <less-than>
          <property>velocities/groundspeed-kt</property>
          <value>2</value>
        </less-than>
        <equals>
          <property>engines/engine[0]/stopped</property>
          <value type="int">1</value>
        </equals>
      </or>
    </condition>
  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~~~~~ hide scale -->
  <animation>
    <type>pick</type>
    <object-name>ground_equipment.scale</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/ground-equipment-s</property>
      </binding>
    </action>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ external-power-unit -->
  <animation>
    <type>select</type>
    <object-name>external-power-unit.box</object-name>
    <object-name>external-power-unit.wire</object-name>
    <object-name>extincteur</object-name>
    <condition>
      <property>sim/model/ground-equipment-p</property>
      <less-than>
        <property>velocities/groundspeed-kt</property>
        <value>2</value>
      </less-than>
    </condition>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ hide epu -->
  <animation>
    <type>pick</type>
    <object-name>external-power-unit.box</object-name>
    <object-name>external-power-unit.wire</object-name>
    <object-name>extincteur</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/ground-equipment-p</property>
      </binding>
    </action>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ fuel-truck -->
  <animation>
    <type>select</type>
    <object-name>fuel-truck.base</object-name>
    <object-name>fuel-truck.pipe</object-name>
    <object-name>fuel-truck.tank</object-name>
    <object-name>cone</object-name>
    <condition>
      <property>sim/model/ground-equipment-f</property>
      <less-than>
        <property>velocities/groundspeed-kt</property>
        <value>2</value>
      </less-than>
    </condition>
  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~~~~~ hide fuel-truck -->
  <animation>
    <type>pick</type>
    <object-name>fuel-truck.base</object-name>
    <object-name>fuel-truck.pipe</object-name>
    <object-name>cone</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/ground-equipment-f</property>
      </binding>
    </action>
  </animation>
  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control fuel quantity -->
  <animation>
    <type>pick</type>
    <object-name>fuel-truck.tank</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>dialog-show</command>
        <dialog-name>bourrasque-fuel</dialog-name>
      </binding>
    </action>
  </animation>


</PropertyList>

