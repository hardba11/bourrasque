    <inherits-from>Aircraft/bourrasque/models/effects/aircraft/mirror</inherits-from>
    <object-name>projecteur_train_mirroir</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>projecteur_train</object-name>
    <emission>
      <factor>2</factor>
      <red>.3</red>
      <green>.3</green>
      <blue>1</blue>
    </emission>
  </animation>

