    <type>select</type>
    <object-name>projecteur_train</object-name>
    <condition>
      <and>
        <property>controls/lighting/taxi-light</property>
        <property>systems/electrical/bus/commands</property>
        <equals>
          <property>gear/gear[0]/position-norm</property>
          <value>1</value>
        </equals>
      </and>
    </condition>
  </animation>


