<?xml version="1.0" encoding="utf-8"?>
<PropertyList>

  <path>smoke_pod.ac</path>
  <nopreview />

  <!--
================================================================================
                                                             OBJECTS DECLARATION
================================================================================
  -->

  <animation>
    <type>material</type>
    <object-name>smoke-pod</object-name>
  </animation>

  <effect>
    <inherits-from>Aircraft/bourrasque/models/effects/aircraft/aircraft</inherits-from>
    <object-name>smoke-pod</object-name>
  </effect>


  <!--
================================================================================
                                                         CONTROLS AND ANIMATIONS
================================================================================
  -->
  <animation>
    <type>select</type>
    <object-name>smoke-pod</object-name>
    <condition>
      <property>sim/model/wing-pylons-smoke-pod</property>
    </condition>
  </animation>

  <model>
    <path>smoke_from_pod-white.xml</path>
    <condition>
      <property>sim/model/smoking</property>
      <equals>
        <!--property>sim/model/smoking-color</property-->
        <property>sim/multiplay/generic/string[0]</property>
        <value>white</value>
      </equals>
    </condition>
    <offsets>
      <x-m>5.1</x-m>
      <y-m>5.3</y-m>
      <z-m>0</z-m>
    </offsets>
  </model>
